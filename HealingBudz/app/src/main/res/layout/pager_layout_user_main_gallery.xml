<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_view_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/flag_view">

        <include
            layout="@layout/giraffe_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" />

        <com.codingpixel.healingbudz.customeUI.TouchImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/download_image"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="60sp"
            android:paddingLeft="6sp"
            android:paddingRight="6sp"
            android:src="@drawable/ic_download"
            android:tint="@color/white" />


        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="52sp"
            android:layout_height="52sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:indeterminateTint="#ffffff"
            android:indeterminateTintMode="src_atop" />

        <ImageView
            android:id="@+id/play_vid"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_video_play_icon"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/flag_view"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/linn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/download_image_user"
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="7dp"
                android:src="@drawable/ic_download"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/flag_image_user"
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="7dp"
                android:src="@drawable/ic_flag_blue"
                android:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>