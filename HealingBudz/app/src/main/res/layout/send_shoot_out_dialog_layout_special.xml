<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6sp"
            android:layout_marginRight="6sp"
            android:background="@color/transparent">

            <RelativeLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:orientation="vertical"
                android:paddingBottom="18sp">

                <LinearLayout
                    android:id="@+id/first_dialog_layout"
                    android:layout_width="match_parent"
                    android:layout_height="47sp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shoot_out_dialog_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Special"
                        android:textColor="#e070e0"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_dialog_layout"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/add_expert_area_top_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="6sp"
                    android:paddingLeft="16sp"
                    android:paddingRight="16sp">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14sp"
                        android:gravity="center"
                        android:text="within 25 miles radius of"
                        android:textColor="#93268f"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <RadioGroup
                        android:id="@+id/location_radio_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <com.codingpixel.healingbudz.customeUI.HealingBudRadioButton
                            android:id="@+id/zip_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Default zip code from my profile"
                            android:textColor="#4d4d4d"
                            android:textSize="12sp" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudRadioButton
                            android:id="@+id/current_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Find my current location"
                            android:textColor="#4d4d4d"
                            android:textSize="12sp" />
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45sp"
                        android:layout_marginTop="16sp"
                        android:background="@drawable/add_expert_area_edittext_bg"
                        android:padding="14sp">

                        <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                            android:id="@+id/shoot_out_edit_text_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="top|left"
                            android:hint="Title"
                            android:inputType="textCapSentences|textMultiLine"
                            android:maxLength="140"
                            android:textColor="#4d4d4d"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85sp"
                        android:layout_marginTop="16sp"
                        android:background="@drawable/add_expert_area_edittext_bg"
                        android:padding="14sp">

                        <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                            android:id="@+id/shoot_out_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="top|left"
                            android:hint="Description"
                            android:inputType="textCapSentences|textMultiLine"
                            android:maxLength="140"
                            android:textColor="#4d4d4d"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/character_counter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingTop="3sp"
                        android:text="0/140 characters"
                        android:textColor="#4d4d4d"
                        android:textSize="9sp" />

                    <LinearLayout
                        android:id="@+id/bottom_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/main_cntn"
                        android:layout_marginTop="14sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:id="@+id/attatch_image"
                            android:layout_width="0sp"
                            android:layout_height="46sp"
                            android:layout_weight="4.5"
                            android:background="@drawable/shhot_out_send_button_bg"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/image_attach"
                                android:layout_width="23sp"
                                android:layout_height="25sp"
                                android:src="@drawable/ic_aatachment_blk" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:text="Add Image"
                                android:textColor="#4d4d4d"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/valid_till"
                            android:layout_width="0sp"
                            android:layout_height="46sp"
                            android:layout_marginLeft="12sp"
                            android:layout_weight="4.5"
                            android:background="@drawable/shhot_out_send_button_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24sp"
                                android:layout_height="25sp"
                                android:src="@drawable/ic_calender_blk" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:id="@+id/valid_till_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:text="Valid Until..."
                                android:textColor="#4d4d4d"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:orientation="horizontal">

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0sp"
                                android:gravity="center"
                                android:text="Link To:"
                                android:textColor="#4d4d4d"
                                android:textSize="12sp" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0sp"
                                android:gravity="center"
                                android:text="(optional)"
                                android:textColor="#4d4d4d"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="33sp"
                            android:layout_marginTop="4sp"
                            android:background="@drawable/add_expert_area_edittext_bg"
                            android:gravity="center_vertical"
                            android:paddingLeft="5sp"
                            android:paddingRight="8sp">

                            <com.codingpixel.healingbudz.customeUI.customspinner
                                android:id="@+id/link_to"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:autofillHints="@string/app_name" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_arrow_drop_down_black_24dp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12sp"
                            android:orientation="horizontal">

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0sp"
                                android:gravity="center"
                                android:text="With Special:"
                                android:textColor="#4d4d4d"
                                android:textSize="12sp" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0sp"
                                android:gravity="center"
                                android:text="(optional)"
                                android:textColor="#4d4d4d"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="33sp"
                            android:layout_marginTop="4sp"
                            android:background="@drawable/add_expert_area_edittext_bg"
                            android:gravity="center_vertical"
                            android:paddingLeft="5sp"
                            android:paddingRight="8sp">

                            <com.codingpixel.healingbudz.customeUI.customspinner
                                android:id="@+id/link_to_with"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:autofillHints="@string/app_name" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_arrow_drop_down_black_24dp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:gravity="right"
                        android:text="Share on:"
                        android:textColor="#4d4d4d"
                        android:textSize="9sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36sp"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="10">

                        <com.codingpixel.healingbudz.customeUI.HealingBubCheckBok
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="Share my current location"
                            android:textColor="#4d4d4d"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/fb_share"
                            android:layout_width="0sp"
                            android:layout_height="26sp"
                            android:layout_marginLeft="6sp"
                            android:layout_marginRight="6sp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_facebook_icon" />

                        <ImageView
                            android:id="@+id/twitter_share"
                            android:layout_width="0sp"
                            android:layout_height="26sp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_twitter_icon" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/send_shoot_out_btn"
                        android:layout_width="match_parent"
                        android:layout_height="37sp"
                        android:layout_marginBottom="12sp"
                        android:layout_marginTop="22sp"
                        android:background="@drawable/shoot_out_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="26sp"
                            android:layout_height="18sp"
                            android:src="@drawable/ic_home_shoot_out"
                            android:visibility="gone" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:text="Submit Special"
                            android:textAllCaps="true"
                            android:textColor="#FFF"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


            <ImageView
                android:id="@+id/cross_btn"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:paddingBottom="7sp"
                android:paddingLeft="7sp"
                android:src="@drawable/ic_save_dialog_cross" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>