<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingRight="20sp">

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Methods"
            android:textColor="#923a88"
            android:textSize="13sp"
            android:textStyle="bold" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
            android:id="@+id/not_found_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No payment method available."
            android:textColor="#999999"
            android:textSize="18sp"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/payment_method_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="36sp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_payment_method_1" />

            <ImageView
                android:layout_width="36sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:src="@drawable/ic_payment_method_2" />

            <ImageView
                android:layout_width="36sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:src="@drawable/ic_payment_method_3" />

            <ImageView
                android:layout_width="36sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:src="@drawable/ic_payment_method_4" />

            <ImageView
                android:layout_width="36sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:src="@drawable/ic_payment_method_5" />

            <ImageView
                android:layout_width="36sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:src="@drawable/ic_payment_method_6" />
        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>