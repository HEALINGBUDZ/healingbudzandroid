<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:padding="5sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_weight="7.2">
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:gravity="center"
                android:orientation="vertical">
                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WED"
                    android:id="@+id/day_name"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:layout_marginBottom="-5sp"
                    android:textStyle="bold"
                    android:textColor="#c5c5c5"/>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:layout_marginTop="-9sp"
                    android:id="@+id/day_count"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="#c5c5c5"/>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:30 PM"
                    android:id="@+id/time_count"
                    android:layout_marginTop="-8sp"
                    android:textSize="10sp"
                    android:textColor="#c5c5c5"/>

            </LinearLayout>
            <View
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5.6"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Day of Treatment"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:id="@+id/title_event"
                    android:textColor="#c5c5c5"/>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:paddingRight="14sp"
                    android:maxLines="2"
                    android:textSize="14sp"
                    android:lines="2"
                    android:id="@+id/event_discription"
                    android:text="Today I started using Cannabis as a treatment"
                    android:textColor="#c5c5c5"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:paddingTop="12sp"
                android:layout_weight="2.5">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/image_event"
                    android:background="@drawable/image_plaecholder_bg"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="4sp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_weight="2.4">
            <View
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.9"/>
             <LinearLayout
                 android:layout_width="0sp"
                 android:layout_height="match_parent"
                 android:layout_weight="5.8"
                 android:weightSum="10"
                 android:orientation="horizontal">
                 <LinearLayout
                     android:layout_width="0sp"
                     android:layout_height="match_parent"
                     android:orientation="horizontal"
                     android:gravity="center_vertical"
                     android:layout_weight="3">
                     <ImageView
                         android:layout_width="13sp"
                         android:layout_height="13sp"
                         android:src="@drawable/ic_gallery_icon"/>
                     <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:text="2"
                         android:textSize="14sp"
                         android:id="@+id/image_count"
                         android:layout_marginLeft="4sp"
                         android:textColor="#c5c5c5"/>
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="0sp"
                     android:layout_height="match_parent"
                     android:orientation="horizontal"
                     android:gravity="center_vertical"
                     android:layout_weight="3">
                     <ImageView
                         android:layout_width="13sp"
                         android:layout_height="13sp"
                         android:src="@drawable/ic_movi_icon"/>
                     <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:text="1"
                         android:textSize="14sp"
                         android:id="@+id/video_count"
                         android:layout_marginLeft="4sp"
                         android:textColor="#c5c5c5"/>
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="0sp"
                     android:layout_height="match_parent"
                     android:orientation="horizontal"
                     android:gravity="center_vertical"
                     android:layout_weight="3">
                     <ImageView
                         android:layout_width="13sp"
                         android:layout_height="13sp"
                         android:src="@drawable/ic_pin"/>
                     <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:text="5"
                         android:textSize="14sp"
                         android:id="@+id/tags_count"
                         android:layout_marginLeft="4sp"
                         android:textColor="#c5c5c5"/>
                 </LinearLayout>

                 <ImageView
                     android:layout_width="0sp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:id="@+id/feeling"
                     android:src="@drawable/ic_emoji" />

             </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#b04e4c4e" />
</LinearLayout>