<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@color/transparent">

            <RelativeLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:orientation="vertical"
                android:paddingBottom="18sp">

                <LinearLayout
                    android:id="@+id/first_dialog_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/reward__dialogue_black"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="15sp"
                    android:paddingLeft="15sp"
                    android:paddingRight="16sp">

                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/ic_logo_with_out_name" />

                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="25sp"
                        android:layout_marginTop="-20sp"
                        android:src="@drawable/ic_logo_rewardz"
                        android:text="Group Invitaion"
                        android:textSize="19sp" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="‘Women White T-Shirt’ worth 400 pts"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125sp"
                    android:layout_below="@+id/first_dialog_layout"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/reward_dialogue_white"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical"
                    android:paddingBottom="6sp"
                    android:paddingLeft="15sp"
                    android:paddingRight="12sp"
                    android:paddingTop="0sp">

                    <com.codingpixel.healingbudz.customeUI.HealingBudButtonRegular
                        android:id="@+id/claim_reward_btn"
                        android:layout_width="160sp"
                        android:layout_height="40sp"
                        android:layout_marginLeft="6sp"
                        android:layout_marginRight="6sp"
                        android:background="@drawable/reward_btn"
                        android:lineSpacingExtra="2dp"
                        android:text="CLAIM REWARD"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/cross_btn"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:src="@drawable/ic_cross_reward" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>