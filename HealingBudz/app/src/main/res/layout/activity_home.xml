<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.leadstech.cabidz.activities.home.Home">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/find_new_job_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/status_bar_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="25sp" />

                    <View
                        android:id="@+id/top_line"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:alpha="0.5"
                        android:background="#6fae3e" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/top_bar_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status_bar_top">

                    <include layout="@layout/top_bar" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/fragment_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_bar"
                    android:layout_below="@+id/top_bar_id"
                    android:layout_marginTop="-16sp" />

                <FrameLayout
                    android:id="@+id/fragment_id_full_screen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_bar"
                    android:layout_below="@+id/status_bar_top"
                    android:layout_marginTop="-2sp" />

                <RelativeLayout
                    android:id="@+id/bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_alignParentBottom="true"
                    android:background="#161616">

                    <include layout="@layout/home_bottom_tab_bar_layout" />
                </RelativeLayout>

                <include
                    android:id="@+id/search_layout"
                    layout="@layout/home_activity_search_view"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="280sp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#1f1f1f"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1f1f1f"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="26sp"
                android:background="#171717" />

            <include layout="@layout/drawer_layout_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>