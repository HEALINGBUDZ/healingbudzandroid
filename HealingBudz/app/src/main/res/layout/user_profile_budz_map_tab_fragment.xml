<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginBottom="6sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="6sp"
            android:gravity="center"
            android:text="My Favorite Adz Listing"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#932b88"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:background="#333333" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
            android:id="@+id/not_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10sp"
            android:gravity="center"
            android:text="No record found!"
            android:textColor="#c4c3c4"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="14sp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/loading_spinner"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:indeterminateTint="#ffffff"
                    android:indeterminateTintMode="src_atop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:text="Loading..."

                    android:textColor="@color/white" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyler_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4sp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </RelativeLayout>
    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:clickable="false"-->
    <!--android:layout_marginTop="8sp"-->
    <!--android:id="@+id/recyler_View"/>-->

</LinearLayout>