<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52sp"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/left_month"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:src="@drawable/left_white" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/previous_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="FRB"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:textColor="#e4e4e5" />
        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/current_month"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="6"

            android:gravity="center"
            android:text="MARCH 2017"
            android:textAllCaps="true"
            android:textColor="#e4e4e5"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/right_month"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APR"
                android:textSize="11sp"
                android:textColor="#e4e4e5"
                android:id="@+id/next_month"
                android:textAllCaps="true"
                 />

            <ImageView
                android:layout_width="30sp"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:src="@drawable/right_white" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:id="@+id/top_line"
        android:background="#5f5c5c"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52sp"
        android:layout_marginTop="6sp"
        android:weightSum="7"
        android:orientation="horizontal">
        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="SUN"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_weight="1"
            android:textColor="#e4e4e4"/>
        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="MON"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_weight="1"
            android:textColor="#e4e4e4"/>
        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="TUE"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_weight="1"
            android:textColor="#e4e4e4"/>
        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="WED"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_weight="1"
            android:textColor="#e4e4e4"/>
        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="THU"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_weight="1"
            android:textColor="#e4e4e4"/>
        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="FRI"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_weight="1"
            android:textColor="#e4e4e4"/>
        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="SAT"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_weight="1"
            android:textColor="#e4e4e4"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mode_calendar_recyler_view"/>

</LinearLayout>