<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_layout"
    android:paddingLeft="8sp"
    android:paddingRight="8sp"
    android:background="#2a2a2a"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:orientation="vertical"
        android:weightSum="10">
        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile Setting"
            android:id="@+id/setting_title"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:id="@+id/second_setting_item"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable First Launch Overview Screens"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:text="On next app launch. Requires app restart."
                    android:gravity="center_vertical"
                    android:textSize="11sp"
                    android:textColor="#c5c3c4"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="26sp"
                    android:layout_marginRight="10sp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="4sp"
                    android:layout_marginBottom="1sp"
                    android:background="#616161"
                    android:layout_marginLeft="10sp">
                    <com.codingpixel.healingbudz.customeUI.HealingBudButtonRegular
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginRight="-5sp"
                        android:text="OFF"
                        android:textSize="14sp"
                        android:id="@+id/private_btn"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:background="@drawable/seeting_toggle_btn_off"/>

                    <Button
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginLeft="-5sp"
                        android:textColor="#f8f8f8"
                        android:textSize="12sp"
                        android:id="@+id/public_btn"
                        android:textAllCaps="true"
                        android:background="@color/transparent"/>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#323232"/>
</LinearLayout>