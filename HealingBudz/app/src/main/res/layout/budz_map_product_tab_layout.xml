<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btns"
        android:background="#232323"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="14sp">

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:indeterminateTint="#ffffff"
            android:indeterminateTintMode="src_atop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:text="Loading..."
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/white" />
    </LinearLayout>


    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
        android:id="@+id/no_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btns"
        android:layout_centerInParent="true"
        android:layout_marginTop="14sp"
        android:text="No Product Found!"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

    <!--<android.support.v4.widget.SwipeRefreshLayout-->
    <!--android:id="@+id/swipe_data"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_below="@+id/refresh"></android.support.v4.widget.SwipeRefreshLayout>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/product_recyler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btns"
        android:nestedScrollingEnabled="false" />

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/add_product_open"
            android:layout_width="150sp"
            android:layout_height="42sp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="5sp"
            android:background="@drawable/bg_btn_product"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="7sp"
                android:layout_toLeftOf="@+id/text_btn"
                android:padding="5sp"
                android:src="@drawable/ic_plus_product" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                android:id="@+id/text_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:text="Add Product"
                android:textAllCaps="false"
                android:textColor="#fdfbfd" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_service_open"
            android:layout_width="150sp"
            android:layout_height="42sp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5sp"

            android:background="@drawable/bg_btn_product_serc"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="7sp"
                android:padding="3sp"
                android:src="@drawable/hand_shake" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:text="Add Service"

                android:textAllCaps="false"
                android:textColor="#fdfbfd" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>