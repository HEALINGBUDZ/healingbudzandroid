<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="12sp"
        android:background="#222222"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/img_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="12sp"
        android:scaleType="fitXY"
        android:src="@drawable/place_pen"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/attachment_one_video"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_play_attachment"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/loading_spinner_rs"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateTint="#ffffff"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/delete_layout"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="12sp"
        android:background="@drawable/image_bg_blur"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="10">

        <ImageView
            android:id="@+id/edit_btn"
            android:layout_width="0sp"
            android:layout_height="30sp"
            android:layout_weight="5"
            android:padding="6sp"
            android:src="@drawable/ic_edit_myquestion"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="0sp"
            android:layout_height="30sp"
            android:layout_weight="5"
            android:padding="6sp"
            android:src="@drawable/ic_delete_white" />

    </LinearLayout>

</RelativeLayout>