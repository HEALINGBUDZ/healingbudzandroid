<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    tools:context=".activity.home.home_fragment.budz_map_tab.tabs.AddProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/feed_toolbar_color">

            <LinearLayout
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_wall_sceen_cross" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="Cancel"
                    android:textColor="#929191"
                    android:textSize="15sp" />
            </LinearLayout>

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Add Service"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|right"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_wall_new_post_submit"
                    android:tint="#7CC245"
                    android:visibility="gone" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_menu_dot_gray"
                    android:text="Save"
                    android:textColor="#D4AC3E"
                    android:textSize="15sp" />

            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/pager_view"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_below="@+id/top_view"
            android:layout_marginBottom="10sp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/place_holder_wall" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_weight="1">

            </android.support.v4.view.ViewPager>

            <com.rd.PageIndicatorView
                android:id="@+id/pager_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                app:piv_animationType="scale"
                app:piv_dynamicCount="true"
                app:piv_interactiveAnimation="true"
                app:piv_padding="4dp"
                app:piv_radius="3dp"
                app:piv_scaleFactor="0.9"
                app:piv_selectedColor="#929091"
                app:piv_unselectedColor="#54534f" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pager_view"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/upload_photo"
                android:layout_width="wrap_content"
                android:layout_height="45sp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/upload_btn_new">

                <ImageView
                    android:id="@+id/upload_photo_img"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10sp"
                    android:src="@drawable/ic_gallery_gray"
                    android:tint="@color/white" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_toEndOf="@+id/upload_photo_img"
                    android:text="Upload Photo"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10sp"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                android:id="@+id/name_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/edit_fornew"
                android:hint="Type service name.."
                android:inputType="text|textCapWords"
                android:padding="12sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/intro_color_one_header"
                android:textSize="14sp" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10sp"
                android:text="Charges"
                android:textColor="@color/white"
                android:textSize="14sp" />

