<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@color/transparent">

            <RelativeLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/first_dialog_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/reward_dialogue_black_thank"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="15sp"
                    android:paddingLeft="15sp"
                    android:paddingRight="16sp">

                    <ImageView
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:layout_marginTop="15sp"
                        android:src="@drawable/ic_logo_with_out_name" />

                    <ImageView
                        android:layout_width="90sp"
                        android:layout_height="30sp"
                        android:layout_marginTop="-23sp"
                        android:src="@drawable/ic_logo_rewardz"
                        android:text="Group Invitaion"
                        android:textSize="19sp" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thank You"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="5sp"
                        android:text="for redeeming product “Women White T-Shirt”"
                        android:textColor="#727677"
                        android:textSize="8sp" />
                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:id="@+id/cross_btn"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:src="@drawable/ic_cross_reward" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>