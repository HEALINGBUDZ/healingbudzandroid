<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codingpixel.healingbudz.activity.home.home_fragment.qa_tab.AnswerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#252525">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16sp"
                android:paddingRight="16sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:gravity="center"
                    android:text="You’re answering..."
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#037bc1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:gravity="center"
                        android:padding="4sp"
                        android:text="Q:"
                        android:textColor="#0083cb"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8.3"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="1sp">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:id="@+id/question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Should I warm cannabis oil before applying?"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="I’m using cannabis oil. For muscle pain therapy and I’m unsure if I should warm it before rubbing it on the effected areas."
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#c5c5c5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="132sp"
                    android:layout_marginTop="16sp"
                    android:background="@drawable/answer_fragment_edittext_bg"
                    android:padding="14sp">

                    <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:inputType="textAutoCorrect|textAutoComplete|textCapSentences|textMultiLine|text"
                        android:gravity="top|left"
                        android:id="@+id/answer_text_field"
                        android:hint="Type your answer here..."
                        android:maxLength="2500"
                        android:text="I’m using cannabis oil. For muscle pain therapy and I’m unsure if I should warm it before rubbing it on the effected areas."
                        android:textColor="#5d5d5d" />
                </LinearLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:id="@+id/character_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingTop="3sp"
                    android:text="0/2500 characters"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#74726a" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:layout_marginTop="10sp"
                    android:paddingBottom="3sp"
                    android:paddingTop="2sp"
                    android:weightSum="10">

                    <RelativeLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_margin="4sp"
                        android:layout_weight="3"
                        android:background="@drawable/qa_question_list_item_bg"
                        android:padding="2sp"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                             <View
                                 android:layout_width="0sp"
                                 android:layout_height="match_parent"
                                 android:layout_weight=".4"/>
                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:padding="2sp"
                                android:src="@drawable/ic_attachment" />

                            <LinearLayout
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="6"
                                android:paddingLeft="2sp"
                                android:gravity="left|center_vertical"
                                android:orientation="vertical">

                                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Attach"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textColor="#bab9b6" />

                                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3 Max"
                                    android:textColor="#757470" />
                            </LinearLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/add_attachment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" />

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.5"
                        android:gravity="right|center_vertical"
                        android:weightSum="6">

                        <RelativeLayout
                            android:id="@+id/attachment_three"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2sp"
                            android:layout_weight="2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5sp">

                                <ImageView
                                    android:id="@+id/attachment_three_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/test_img"/>

                                <ImageView
                                    android:id="@+id/attachment_three_video"
                                    android:layout_width="24sp"
                                    android:layout_height="24sp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_play_attachment"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/attachment_three_cross"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_alignParentRight="true"
                                android:paddingBottom="8sp"
                                android:paddingLeft="7sp"
                                android:src="@drawable/ic_cross_image" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/attachment_two"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2sp"
                            android:layout_weight="2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5sp">

                                <ImageView
                                    android:id="@+id/attachment_two_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/test_img"/>

                                <ImageView
                                    android:id="@+id/attachment_two_video"
                                    android:layout_width="24sp"
                                    android:layout_height="24sp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_play_attachment"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/attachment_two_cross"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_alignParentRight="true"
                                android:paddingBottom="8sp"
                                android:paddingLeft="7sp"
                                android:src="@drawable/ic_cross_image" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/attachment_one"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="4sp"
                            android:layout_marginTop="2sp"
                            android:layout_weight="2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5sp">

                                <ImageView
                                    android:id="@+id/attachment_one_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/test_img"/>

                                <ImageView
                                    android:id="@+id/attachment_one_video"
                                    android:layout_width="24sp"
                                    android:layout_height="24sp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_play_attachment"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/attachment_one_cross"
                                android:layout_width="25sp"
                                android:layout_height="25sp"
                                android:layout_alignParentRight="true"
                                android:paddingBottom="8sp"
                                android:paddingLeft="7sp"
                                android:src="@drawable/ic_cross_image" />

                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudButton
                    android:id="@+id/answer_your_bud"
                    android:layout_width="wrap_content"
                    android:layout_height="46sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="14sp"
                    android:layout_marginLeft="14sp"
                    android:layout_marginRight="14sp"
                    android:layout_marginTop="12sp"
                    android:background="@drawable/q_a_menu_ask_q_button"
                    android:paddingLeft="24sp"
                    android:paddingRight="24sp"
                    android:text="ANSWER YOUR BUD"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>
