<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.home.home_fragment.qa_tab.QADetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#252222"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <RelativeLayout
                    android:id="@+id/question_header_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#252222"
                    android:gravity="center"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:weightSum="10">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center_horizontal|top"
                            android:text="Q:"
                            android:textColor="#0083cb"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="9.4"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="1sp">

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                android:id="@+id/header_question_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="Should I warm cannabis oil before applying?"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/toppp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/menu"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_marginBottom="10sp"
                    android:background="#161616"
                    android:clickable="false"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/left_menu_btn_img"
                        android:layout_width="?android:attr/actionBarSize"
                        android:layout_height="match_parent"
                        android:padding="2sp"
                        android:src="@drawable/ic_back_icon" />

                    <ImageView
                        android:id="@+id/left_back_btn_img"
                        android:layout_width="?android:attr/actionBarSize"
                        android:layout_height="match_parent"
                        android:padding="4sp"
                        android:src="@drawable/ic_back_icon"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:paddingRight="6sp">

                        <ImageView
                            android:id="@+id/favorite_btn"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:padding="9sp"
                            android:src="@drawable/ic_favorite_border_black_24dp" />

                        <ImageView
                            android:id="@+id/share_btn"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:padding="9sp"
                            android:src="@drawable/ic_share_black_24dp" />

                        <ImageView
                            android:id="@+id/edit_question"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:padding="9sp"
                            android:src="@drawable/ic_edit_dialog_black"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

                <com.codingpixel.healingbudz.customeUI.CircularImageView
                    android:id="@+id/profile_image"
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_below="@+id/menu"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_user_profile" />

                <ImageView
                    android:id="@+id/profile_img_topi"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:layout_above="@+id/profile_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-18sp"
                    android:layout_marginRight="-20sp"
                    android:layout_toLeftOf="@+id/profile_image"
                    android:src="@drawable/topi_ic"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_image"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/user_name_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:id="@+id/question_date"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4.2"
                            android:text=""
                            android:textColor="#a4a4a3"
                            android:textSize="11sp" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="left"
                            android:padding="4sp"
                            android:text="Q:"
                            android:textColor="#0182cd"
                            android:textSize="34sp" />
                    </LinearLayout>

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp" />


                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/question_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="12sp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#c5c5c5"
                        android:textSize="18sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:layout_marginTop="24sp"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp">

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/reply_text"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="21sp"
                                android:layout_height="13sp"
                                android:src="@drawable/ic_reply_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/reply_text"
                            android:layout_width="wrap_content"
                            android:layout_height="48sp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reply"
                                android:textColor="#cccccb"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                            android:id="@+id/reply_answer"
                            android:layout_width="match_parent"
                            android:layout_height="46sp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/q_a_menu_ask_q_button"
                            android:text="ANSWER YOUR BUD"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/edit_question_dialog"
                    android:layout_width="150sp"
                    android:layout_height="50sp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/menu"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="-14sp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="18sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5sp"
                        android:background="@drawable/ic_up_arrow_indicator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12sp"
                        android:background="@drawable/menu_dialog_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="wrap_content"
                            android:padding="7sp"
                            android:src="@drawable/ic_edit_dialog_black" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Edit Question"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="#656666" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_qadetail" />

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</android.support.design.widget.CoordinatorLayout>