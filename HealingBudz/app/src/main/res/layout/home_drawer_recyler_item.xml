<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal"
            android:weightSum="10">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/text_img"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Q:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#343434"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_resourse"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3sp"
                android:src="@drawable/ic_my_wall"
                android:tint="#363736" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                android:id="@+id/drawer_title"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="8.3"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="12sp"
                android:singleLine="true"
                android:text="Should I smoke it?"
                android:textColor="#c6c6c6"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="10">

            <View
                android:layout_width="0sp"
                android:layout_height="1sp"
                android:layout_weight=".3" />

            <View
                android:layout_width="0sp"
                android:layout_height="1sp"
                android:layout_weight="9.4"
                android:background="#1c1c1c" />

            <View
                android:layout_width="0sp"
                android:layout_height="1sp"
                android:layout_weight=".2" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>