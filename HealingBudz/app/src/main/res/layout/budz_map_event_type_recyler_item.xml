<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232323"
    android:orientation="vertical">

    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingRight="20sp"

        android:text="Tickets"
        android:textColor="#a63a9b"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/doctor_item"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingRight="20sp"
        android:paddingBottom="10sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8sp"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="2.4">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="1sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_doctor_icon" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="#80000000" />

                <Button
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3sp"
                    android:layout_marginRight="3sp"
                    android:background="@drawable/ic_budz_map_images_counter_bg"
                    android:text="99+"
                    android:textColor="#424345"
                    android:textSize="7sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="7.6"
                android:orientation="vertical"
                android:paddingLeft="12sp"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="4.8"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:id="@+id/titlee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Evaluation Appointment"
                            android:textColor="#b5b5b5"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                android:id="@+id/price"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center_vertical"
                                android:text="$159.99"
                                android:textColor="#a9a9ab"
                                android:textSize="9sp" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="6"
                                android:gravity="center_vertical"
                                android:text=".02% CBD | .10% THC"
                                android:textColor="#afafb0"
                                android:textSize="8sp"
                                android:visibility="invisible" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="5.2"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:id="@+id/linke"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="all"
                            android:text=""
                            android:textColor="#b5b6b9" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/item_product_recyler_ciew"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/share_ticket"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="14sp"
                        android:src="@drawable/ic_share_white" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingEnd="25sp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="9sp"
                android:src="@drawable/ic_edit_journal"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="8sp"
                android:src="@drawable/ic_delete_dark_gray"
                android:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#353535" />
</LinearLayout>