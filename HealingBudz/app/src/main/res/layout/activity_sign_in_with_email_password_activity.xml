<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg_img"
    android:fitsSystemWindows="true"
    tools:context="com.codingpixel.healingbudz.activity.Registration.LoginEntrance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="52sp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16sp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="150sp"
                android:layout_height="130sp"
                android:src="@drawable/ic_logo" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15sp"
                android:text="The Community for Natural Healing"
                android:textAllCaps="false"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:gravity="center"
                android:text="john123@gmail.com"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <RelativeLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="30sp"
                android:orientation="horizontal">

                <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                    android:id="@+id/password_text_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="center"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:password="true"
                    android:textColor="#fafafa"
                    android:textColorHint="#ceccce"
                    android:textCursorDrawable="@drawable/edit_text_cursor_drawable_white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/show_pass"
                    android:layout_width="20sp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10sp"
                    android:src="@drawable/ic_show_pass" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_alignParentBottom="true"
                    android:background="#60999996" />
            </RelativeLayout>

            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginTop="10sp"
                android:layout_marginRight="30sp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="Forgot Password"
                android:textColor="@color/white"
                android:visibility="gone" />

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/forget_password_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:text="Forgot Password"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/next_step"
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:layout_marginTop="20sp"
                android:padding="6sp"
                android:src="@drawable/ic_login_next_btn" />

        </LinearLayout>

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="52sp"
            android:layout_height="52sp"
            android:layout_alignParentTop="true"
            android:layout_margin="5sp"
            android:padding="2sp"
            android:src="@drawable/ic_back_icon" />
    </RelativeLayout>
</ScrollView>
