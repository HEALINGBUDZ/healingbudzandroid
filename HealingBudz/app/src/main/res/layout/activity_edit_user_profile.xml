<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context="com.codingpixel.healingbudz.activity.home.side_menu.profile.UserProfileActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/edit_user_parent_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#232323">

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="272sp">

                <ImageView
                    android:id="@+id/cover_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#59000000" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_marginTop="22sp">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="42sp"
                    android:layout_height="match_parent"
                    android:padding="2sp"
                    android:src="@drawable/ic_back_icon" />

                <ImageView
                    android:id="@+id/home_btn"
                    android:layout_width="42sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_toRightOf="@id/back_btn"
                    android:padding="7sp"
                    android:src="@drawable/ic_home_icon" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14sp"
                android:layout_marginTop="38sp"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/upload_cover_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Cover Photo"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="17sp"
                        android:layout_height="17sp"
                        android:layout_marginLeft="8sp"
                        android:background="@drawable/white_circle"
                        android:padding="5sp"
                        android:src="@drawable/ic_edit_pin_green" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/healing_bud_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit My HB Gallery"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="18sp"
                        android:layout_height="15sp"
                        android:layout_marginLeft="4sp"
                        android:src="@drawable/ic_galllery_icon_user_profile" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/prfl_img"
                android:layout_width="wrap_content"
                android:layout_height="80sp"
                android:layout_below="@+id/menu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-28sp">

                <com.codingpixel.healingbudz.customeUI.CircularImageView
                    android:id="@+id/profile_image"
                    android:layout_width="74sp"
                    android:layout_height="74sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8sp"
                    android:src="@drawable/ic_discuss_question_profile" />

                <ImageView
                    android:id="@+id/profile_img_topi"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="40sp"
                    android:src="@drawable/topi_ic"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="100sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Follow"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#cbc6c4"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/upload_photo_edit"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="8sp"
                        android:background="@drawable/white_circle"
                        android:padding="8sp"
                        android:src="@drawable/ic_edit_pin_green" />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buder_infoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prfl_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16sp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/update_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="BesterBud"
                        android:textColor="#e59a07"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_marginLeft="4sp"
                        android:padding="6sp"
                        android:src="@drawable/ic_pin_edit_myjournal" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_rating_image"
                        android:layout_width="16sp"
                        android:layout_height="19sp"
                        android:src="@drawable/ic_profile_leaf_yellow" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/user_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8sp"
                        android:text="335"
                        android:textColor="#ec980a"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/user_rating_seprator"
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="6dp"
                        android:background="#ec980a" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/user_rating_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blooming Bud"
                        android:textColor="#ec980a"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="22sp"
                        android:layout_height="22sp"
                        android:layout_marginLeft="8sp">

                        <ImageView
                            android:layout_width="13sp"
                            android:layout_height="13sp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@color/white" />

                        <ImageView
                            android:id="@+id/info_button"
                            android:layout_width="22sp"
                            android:layout_height="22sp"
                            android:src="@drawable/ic_info_icon" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/following_follwoer_layout"
                android:layout_width="match_parent"
                android:layout_height="37sp"
                android:layout_below="@+id/buder_infoo"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/follow_layout"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.6"
                    android:background="@drawable/profile_follwower_bg"
                    android:weightSum="10">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:id="@+id/follower_count"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4"
                        android:gravity="center"
                        android:text="30"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="#71ae3e" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.5"
                        android:gravity="center"
                        android:text="Followers"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/unfollow_layout"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8sp"
                    android:layout_weight="3.6"
                    android:background="@drawable/profile_follwower_bg"
                    android:weightSum="10">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:id="@+id/following_count"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.19"
                        android:gravity="center"
                        android:text="25"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:background="#71ae3e" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.5"
                        android:gravity="center"
                        android:text="Following"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/following_follwoer_layout"
                android:layout_marginTop="16sp"
                android:background="#232323"
                android:orientation="vertical"
                android:paddingBottom="18sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32sp"
                    android:background="#4d4d4d">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="About Me"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/edit_bud_info"
                        android:layout_width="60sp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4sp"
                        android:layout_marginRight="6sp"
                        android:gravity="center_vertical|right">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:padding="6sp"
                            android:src="@drawable/ic_edit_white" />

                    </LinearLayout>

                </RelativeLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:id="@+id/user_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="13sp"
                    android:layout_marginRight="13sp"
                    android:layout_marginTop="10sp"
                    android:background="#1e1e1e" />

                <RelativeLayout
                    android:id="@+id/email_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginLeft="13sp"
                    android:layout_marginRight="13sp"
                    android:orientation="horizontal">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Email"
                        android:textColor="#c3c3c3"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/edit_pin"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5sp"
                        android:src="@drawable/ic_pin_edit_myjournal" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16sp"
                        android:layout_toLeftOf="@+id/edit_pin"
                        android:gravity="right"
                        android:text="john@gmail.com"
                        android:textColor="#c3c3c3"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="13sp"
                    android:layout_marginRight="13sp"
                    android:background="#1e1e1e" />

                <RelativeLayout
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginLeft="13sp"
                    android:layout_marginRight="13sp"
                    android:orientation="horizontal">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Password"
                        android:textColor="#c3c3c3"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/edit_pin2"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5sp"
                        android:src="@drawable/ic_pin_edit_myjournal" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:id="@+id/password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16sp"
                        android:layout_toLeftOf="@+id/edit_pin2"
                        android:gravity="right"
                        android:text="***********"
                        android:textColor="#c3c3c3"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="13sp"
                    android:layout_marginRight="13sp"
                    android:background="#1e1e1e" />

                <RelativeLayout
                    android:id="@+id/edit_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginLeft="13sp"
                    android:layout_marginRight="13sp"
                    android:orientation="horizontal">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:text="Zipcode"
                        android:textColor="#c3c3c3"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/edit_pin3"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5sp"
                        android:src="@drawable/ic_pin_edit_myjournal" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:id="@+id/zip_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16sp"
                        android:layout_toLeftOf="@+id/edit_pin3"
                        android:gravity="right"
                        android:text="45674"
                        android:textColor="#c3c3c3"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="13sp"
                    android:layout_marginRight="13sp"
                    android:background="#1e1e1e" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32sp"
                    android:layout_marginTop="14sp"
                    android:background="#4d4d4d">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="My Experience"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/edit_expert_aria"
                        android:layout_width="60sp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4sp"
                        android:layout_marginRight="6sp"
                        android:gravity="center_vertical|right">

                        <ImageView
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_marginLeft="4sp"
                            android:layout_marginRight="6sp"
                            android:padding="6sp"
                            android:src="@drawable/ic_edit_white" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:weightSum="10">


                    <View
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.04"
                        android:background="#323232" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="46sp"
                        android:gravity="center"
                        android:text="Medical Conditions Treated"
                        android:textColor="#7cc144"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="#323232" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/medial_experties_rc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="18sp"
                        android:paddingTop="6sp">

                    </android.support.v7.widget.RecyclerView>

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/medial_experties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="18sp"
                        android:paddingTop="6sp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_weight="0.04"
                    android:background="#323232" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="46sp"
                        android:gravity="center"
                        android:text="My Top 5 Strains"
                        android:textColor="#7cc144"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="#323232" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/setrain_experties_rc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="18sp"
                        android:paddingTop="6sp">

                    </android.support.v7.widget.RecyclerView>

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/setrain_experties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="18sp"
                        android:paddingTop="6sp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/user_profile_info_dialog"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/buder_infoo"
                android:layout_below="@+id/buder_infoo"
                android:layout_marginRight="-70sp"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/indi_ctr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="14sp"
                        android:layout_marginLeft="14sp"
                        android:background="@drawable/user_profile_info_dialog_indicator" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/indi_ctr"
                    android:layout_marginTop="-3sp"
                    android:background="@drawable/user_profile_info_dialog_backgroud"
                    android:orientation="vertical"
                    android:padding="10sp">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Sprout"
                        android:textColor="#919191"
                        android:textSize="13sp" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/rating_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3sp"
                        android:gravity="center"
                        android:text="Blooming Bud"
                        android:textColor="#e99609"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginBottom="8sp"
                        android:layout_marginTop="8sp"
                        android:background="#4b4b4b" />


                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="How active is this Bud? Budz get 1 ranking point for every action in the Healing Budz Community."
                        android:textColor="#919191"
                        android:textSize="10sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14sp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0sp"
