<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/comment_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:background="@drawable/strain_review_bg"
        android:orientation="vertical"
        android:padding="10sp">

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="Add Your Comment Below"
            android:textColor="#f4c42f"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:background="@drawable/answer_fragment_edittext_bg"
            android:padding="14sp">

            <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                android:id="@+id/commment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="top|left"
                android:hint="Type your comment here"
                android:inputType="text|textMultiLine|textCapSentences|textImeMultiLine"
                android:maxLength="300"
                android:maxLines="5"
                android:textColor="#383838"
                android:textSize="16sp" />
        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/question_detail_character_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="3sp"
            android:text="Max.500 Characters"
            android:textColor="#e4e4e5"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37sp"
            android:layout_marginTop="18sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/upload_comment_image"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:background="@drawable/more_about_strain_button_bg"
                android:text="Upload"
                android:textColor="#231f20"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6.6"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="AN IMAGE OR VIDEO"
                    android:textColor="#e4e4e5"
                    android:textSize="14sp" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:gravity="center_vertical"
                    android:text="(20 sec max.)"
                    android:textColor="#e4e4e5"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="14sp"
            android:background="#363636" />

        <LinearLayout
            android:id="@+id/comment_image_layout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="10sp"
                android:src="@drawable/ic_attatch_ment" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/attachement_img"
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:background="@drawable/test_img" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/attachment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:visibility="gone"
                    android:text="image.png"
                    android:textColor="#e4e4e5"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/attatchment_cross"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="14sp"
                android:src="@drawable/ic_cross_icon" />


        </LinearLayout>


        <View
            android:id="@+id/attatch_img_line"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="10sp"
            android:background="#363636" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46sp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:weightSum="10">

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="Add Your Rating:"
                android:textColor="#f4c42f"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="5.9"
                android:gravity="center"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/str_rating_one"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4sp"
                    android:src="@drawable/ic_strain_rating_one" />

                <ImageView
                    android:id="@+id/str_rating_two"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4sp"
                    android:src="@drawable/ic_strain_rating_two" />

                <ImageView
                    android:id="@+id/str_rating_three"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4sp"
                    android:src="@drawable/ic_strain_rating_three" />

                <ImageView
                    android:id="@+id/str_rating_four"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4sp"
                    android:src="@drawable/ic_strain_rating_four" />

                <ImageView
                    android:id="@+id/str_rating_five"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4sp"
                    android:src="@drawable/ic_strain_rating_five" />

            </LinearLayout>


        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
            android:id="@+id/submit_commnet"
            android:layout_width="match_parent"
            android:layout_height="37sp"
            android:layout_marginTop="16sp"
            android:background="@drawable/more_about_strain_button_bg"
            android:text="Update Comment"
            android:textColor="#231f20"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView

        android:id="@+id/cross_btn"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentRight="true"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp"
        android:src="@drawable/ic_cross_strain_yellow" />
</RelativeLayout>