<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#252525"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        android:paddingBottom="4sp"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:paddingTop="4sp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/icon_img"
            android:layout_width="0sp"
            android:layout_height="30sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1.1"
            android:padding="4sp"
            android:src="@drawable/ic_group_green" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/text_icon"
            android:layout_width="0sp"
            android:layout_height="30sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1.1"
            android:gravity="center_horizontal"
            android:text="A:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#7cc144"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="8.9"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="6sp"
            android:paddingTop="6sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:id="@+id/title_main"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.4"
                    android:singleLine="true"
                    android:text="BesterBud is now following you."
                    android:textColor="#6da73e"
                    android:textSize="14sp" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/activity_time"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1sp"
                    android:layout_marginTop="1sp"
                    android:layout_weight="3.6"

                    android:gravity="right"
                    android:singleLine="true"
                    android:text="9.26.17 10:57 AM"
                    android:textColor="#555555"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:id="@+id/heading_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1sp"
                    android:layout_marginTop="1sp"
                    android:maxLines="5"
                    android:text="Cactus 2"
                    android:textColor="#a4a4a4"
                    android:textSize="17sp" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/strain_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:singleLine="true"
                    android:layout_marginTop="1sp"
                    android:background="@drawable/activity_log_strain_keyword_bg"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="#cactus2"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="4sp"
        android:background="#202020" />
</LinearLayout>