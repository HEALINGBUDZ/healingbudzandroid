<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg_img"
    tools:context="com.codingpixel.healingbudz.activity.Registration.LoginEntrance">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16sp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="157sp"
            android:layout_height="71sp"
            android:src="@drawable/ic_expert_areas_top_icon"/>
       <com.codingpixel.healingbudz.customeUI.HealingBudTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:textColor="@color/white"
           android:textSize="18sp"
           android:layout_marginTop="22sp"
           android:text="The Healing Budz community is \n all about budz helping budz."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginTop="22sp"
            android:orientation="vertical"
            android:padding="12sp"
            android:background="@drawable/qa_question_list_item_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="46sp"
                    android:layout_height="46sp"
                    android:src="@drawable/ic_expert_area_question_icon"/>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#c5c5c5"
                    android:textSize="14sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginTop="12sp"
                    android:text="A bud asks the community a question…"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:textColor="#c5c5c5"
                    android:layout_weight="8"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:layout_marginLeft="16sp"
                    android:layout_marginTop="12sp"
                    android:text="Budz with experience in that area \nare notified to supply an answer."/>
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="46sp"
                    android:src="@drawable/ic_experet_area_top_question_icon"/>


            </LinearLayout>
        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="25sp"
            android:text="By indicating your experience areas with us, we can notify you via push notifications when another bud needs your help in that specific area."/>

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="12sp"
            android:text="Be someone’s hero."/>

         <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
             android:layout_width="match_parent"
             android:layout_height="48sp"
             android:layout_marginLeft="8sp"
             android:layout_marginRight="8sp"
             android:layout_marginTop="20sp"
             android:text="ADD YOUR EXPERIENCE AREAS"
             android:textColor="@color/white"
             android:textStyle="bold"
             android:id="@+id/add_epert_area"
             android:textSize="17sp"
             android:background="@drawable/budz_map_dialog_green_btn_bg_main"/>


        <com.codingpixel.healingbudz.customeUI.HealingBudButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:paddingRight="15sp"
            android:textSize="14sp"
            android:textColor="#c5c5c5"
            android:textAllCaps="false"
            android:paddingLeft="15sp"
            android:id="@+id/remind_me_later"
            android:background="@color/transparent"
            android:text="Remind me later >"/>
    </LinearLayout>

</RelativeLayout>
