<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="vertical"
    tools:context="com.codingpixel.healingbudz.activity.home.side_menu.messages.MessagesActivity">

    <RelativeLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#1f1f1f">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="42sp"
            android:layout_height="match_parent"
            android:padding="2sp"
            android:src="@drawable/ic_back_icon" />

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="42sp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/back_btn"
            android:padding="7sp"
            android:src="@drawable/ic_home_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_new_journal"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:layout_marginRight="5sp"
                android:src="@drawable/ic_my_messages" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/q_a_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="4sp"
                android:text="Messages"
                android:textColor="#e4e4e5"
                android:textSize="21sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/add_new_msg"
            android:layout_width="42sp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:padding="8sp"
            android:src="@drawable/ic_edit_messages" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42sp"
        android:layout_marginLeft="14sp"
        android:layout_marginRight="14sp"
        android:layout_marginTop="14sp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2sp"
            android:layout_marginTop="2sp"
            android:background="@drawable/qa_fragment_search_bg">

            <com.codingpixel.healingbudz.customeUI.HealinBudEditTextRegular
                android:id="@+id/search_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/transparent"
                android:gravity="center"
                android:hint="search users"
                android:imeOptions="actionDone"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#676766"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="42sp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="7sp"
                android:src="@drawable/ic_qa_fragment_search"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42sp"
        android:orientation="horizontal"
        android:weightSum="12">

        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="5.97">

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/tab_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="My Messages"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/my_messages_indicator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:background="@color/transparent" />

        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="5.97">

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/tab_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="Business Messages"
                android:textAllCaps="false"
                android:textColor="#c4c4c4"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/my_business_indicator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/back_to_business"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="#932a88"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="30sp"
            android:layout_marginLeft="10sp"
            android:layout_height="30sp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/retrn" />

        <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
            android:id="@+id/my_business_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="start|center_vertical"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:text="My Business Name"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12sp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/messages_recyler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14sp"
                android:layout_marginRight="14sp"
                android:layout_marginTop="14sp" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/no_record_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="No Record Found!"
            android:textColor="@color/white"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>
