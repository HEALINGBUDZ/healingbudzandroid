<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg_img">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16sp">

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5sp"
                    android:gravity="center"
                    android:text="Your Experience"
                    android:textColor="@color/white"
                    android:textSize="34sp" />

                <ImageView
                    android:id="@+id/intro_how_too"
                    android:visibility="gone"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7sp"
                    android:padding="5sp"
                    android:src="@drawable/ic_info_icon" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first"
                android:layout_marginTop="14sp"
                android:background="@drawable/shoot_out_dialog_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/_q_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="QUESTION 1/2"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewItalic
                    android:id="@+id/question_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/_q_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3sp"
                    android:gravity="center"
                    android:textColor="#7dc241"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/line_1"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_below="@+id/question_one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3sp"
                    android:background="#717171" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/limit_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3sp"
                    android:text="Add up to 5"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/question_one_recylerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/limit_1"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/question_one_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second"
                android:background="@drawable/add_expert_area_top_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/simple_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Begin typing a medical condition to search"
                    android:textColor="#4d4d4d"
                    android:textSize="12sp" />

                <com.codingpixel.healingbudz.customeUI.CustomAutoCompleteTextView
                    android:id="@+id/edit_text_question_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/simple_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4sp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="4sp"
                    android:background="@drawable/add_expert_area_edittext_bg"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:lines="1"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/edit_text_question_two"
                    android:nextFocusForward="@+id/edit_text_question_two"
                    android:paddingBottom="10sp"
                    android:paddingLeft="6sp"
                    android:paddingRight="6sp"
                    android:paddingTop="10sp"
                    android:singleLine="true"
                    android:textColor="#797777"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <include
                    android:id="@+id/no_suggest_layout_1"
                    layout="@layout/dialouge_add_suggestion_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_text_question_one"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="-5sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fourth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_one_layout"
                android:layout_marginTop="20sp"
                android:background="@drawable/shoot_out_dialog_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/q_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="QUESTION 2/2"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewItalic
                    android:id="@+id/question_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/q_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3sp"
                    android:gravity="center"
                    android:textColor="#7dc241"
                    android:textSize="12sp" />

                <View
                    android:id="@+id/line_2"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_below="@+id/question_two"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3sp"
                    android:background="#717171" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/limit_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3sp"
                    android:text="Add up to 5"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/question_two_recylerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/limit_2"
                    android:layout_centerHorizontal="true" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/question_two_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fourth"
                android:background="@drawable/add_expert_area_top_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Begin typing a strain name to search"
                    android:textColor="#4d4d4d"
                    android:textSize="12sp" />

                <include
                    android:id="@+id/no_suggest_layout_2"
                    layout="@layout/dialouge_add_suggestion_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-4sp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:visibility="gone" />

                <com.codingpixel.healingbudz.customeUI.CustomAutoCompleteTextView
                    android:id="@+id/edit_text_question_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4sp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="4sp"
                    android:background="@drawable/add_expert_area_edittext_bg"
                    android:imeOptions="actionDone"
                    android:inputType="textAutoComplete"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingBottom="10sp"
                    android:paddingLeft="6sp"
                    android:paddingRight="6sp"
                    android:paddingTop="10sp"
                    android:singleLine="true"
                    android:textColor="#797777"
                    android:textSize="13sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/add_epert_area"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:layout_below="@+id/question_two_layout"
                android:layout_marginTop="20sp"
                android:background="@drawable/budz_map_dialog_green_btn_bg_main"
                android:focusable="false"
                android:focusedByDefault="false"
                android:text="SAVE YOUR EXPERIENCE AREAS"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/complete_profile"
                android:layout_width="match_parent"
                android:layout_height="35sp"

                android:layout_below="@+id/add_epert_area"
                android:layout_marginTop="20sp"
                android:background="@drawable/budz_map_dialog_green_btn_bg_main"
                android:focusable="false"
                android:focusedByDefault="false"
                android:text="COMPLETE PROFILE"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:id="@+id/remind_me_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/complete_profile"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="10sp"
                android:background="@color/transparent"
                android:focusable="false"
                android:focusedByDefault="false"
                android:gravity="center"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:text="Remind me later >"
                android:textAllCaps="false"
                android:textColor="#c5c5c5"
                android:textSize="14sp" />

            <!--<View-->
            <!--android:id="@+id/bottom_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="150sp"-->
            <!--android:background="@color/transparent"-->
            <!--android:visibility="gone" />-->
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>

</ScrollView>
