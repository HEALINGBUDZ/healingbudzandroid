<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="6sp"
    android:background="@drawable/reward_border">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8sp">

        <LinearLayout
            android:id="@+id/card_view_top_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_point"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete your profile."
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-5sp"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="23sp"
                        android:layout_height="23sp"
                        android:layout_gravity="top"
                        android:layout_marginLeft="-3sp"
                        android:paddingBottom="6sp"
                        android:paddingRight="6sp"
                        android:paddingTop="6sp"
                        android:src="@drawable/ic_green_star_reward" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/text_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="-6sp"
                        android:layout_toRightOf="@+id/star"

                        android:text="400 points"
                        android:textColor="#82BB2B"
                        android:textSize="12sp" />


                </RelativeLayout>
            </LinearLayout>

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/claim_reward"
                android:layout_width="match_parent"
                android:layout_height="28sp"
                android:background="@drawable/reward_btn"
                android:lineSpacingExtra="2dp"
                android:text="Redeem Reward"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>