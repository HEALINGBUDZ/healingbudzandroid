<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingRight="20sp">

        <LinearLayout
            android:id="@+id/open_full_cooment"
            android:layout_width="match_parent"
            android:layout_height="28sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                android:id="@+id/review_count"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:text="200 Reviews"
                android:textColor="#923a88"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/add_comment"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/shoot_out_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:src="@drawable/ic_comment_icon" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/healingBudTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4sp"
                    android:text="Add Review"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_review_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/budz_map_details_comment_list_bg"
            android:orientation="vertical"
            android:padding="10sp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50sp">

                        <com.codingpixel.healingbudz.customeUI.CircularImageView
                            android:id="@+id/comment_one_user_img"
                            android:layout_width="42sp"
                            android:layout_height="42sp"
                            android:padding="4sp"
                            android:src="@drawable/ic_user_profile" />

                        <ImageView
                            android:id="@+id/profile_img_topi"
                            android:layout_width="20sp"
                            android:layout_height="17dp"
                            android:src="@drawable/topi_ic"
                            android:visibility="visible" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.4"
                    android:orientation="vertical"
                    android:padding="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2sp"
                        android:layout_marginRight="2sp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:id="@+id/comment_one_user_name"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"

                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="GlitterStorm"
                            android:textColor="#caccca"

                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewItalic
                            android:id="@+id/comment_one_date"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="right"
                            android:text="25 Aug 2017"
                            android:textColor="#caccca"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/comment_one_comment_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2sp"
                        android:layout_marginTop="3sp"
                        android:layout_marginRight="2sp"
                        android:text="Lorem ipsum dolor sit met, consectetur adipiscing elit. Aliquam lorem lacks, efficture at fermentum quis. Vivamos id velho rhoncus."
                        android:textColor="#c4c4c4"
                        android:textSize="12sp" />


                    <RelativeLayout
                        android:id="@+id/first_attttach"
                        android:layout_width="65sp"
                        android:layout_height="65sp"
                        android:layout_marginTop="12sp">

                        <ImageView
                            android:id="@+id/comment_attachment_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image_plaecholder_bg" />

                        <ImageView
                            android:id="@+id/comment_one_video_icon"
                            android:layout_width="38sp"
                            android:layout_height="38sp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:alpha="0.86"
                            android:src="@drawable/ic_video_play_icon"
                            android:visibility="gone" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/comment_one_rating_img"
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:padding="6.5sp"
                        android:src="@drawable/star_fill" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/comment_one_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.0"
                        android:textColor="#e070e0"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/comment_one_like"
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="20sp"
                        android:padding="5sp"
                        android:src="@drawable/ic_like_icon" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/first_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/reply_layout_one"
                layout="@layout/budz_reply_layout"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_weight="1.4" />

                <LinearLayout
                    android:id="@+id/comment_one_reply"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:padding="9sp"
                        android:src="@drawable/ic_reply_budz" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="Reply"
                        android:textColor="#932a88"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_one_share"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:padding="9sp"
                        android:src="@drawable/ic_share_white" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="Share"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/repote_it_item_one"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.4"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/edit_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8sp"
                        android:layout_gravity="start"
                        android:gravity="start|center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ic_edit_one"
                            android:layout_width="32sp"
                            android:layout_height="32sp"
                            android:layout_centerInParent="true"
                            android:padding="9sp"
                            android:src="@drawable/ic_edit_white" />

                        <ImageView
                            android:id="@+id/ic_delete_one"
                            android:layout_width="32sp"
                            android:layout_height="32sp"
                            android:layout_alignTop="@+id/ic_edit_one"
                            android:layout_alignParentEnd="true"
                            android:padding="9sp"
                            android:src="@drawable/ic_delete_white" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/report_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8sp"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/comment_one_report_icon"
                            android:layout_width="32sp"
                            android:layout_height="32sp"
                            android:padding="9sp"
                            android:src="@drawable/ic_flag_white" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:id="@+id/comment_one_report_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Report"
                            android:textColor="@color/white"
                            android:textSize="11sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/second_review_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/budz_map_details_comment_list_bg"
            android:orientation="vertical"
            android:padding="10sp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50sp">

                        <com.codingpixel.healingbudz.customeUI.CircularImageView
                            android:id="@+id/comment_two_user_img"
                            android:layout_width="42sp"
                            android:layout_height="42sp"
                            android:padding="4sp"
                            android:src="@drawable/ic_user_profile" />

                        <ImageView
                            android:id="@+id/profile_img_topi_2"
                            android:layout_width="20sp"
                            android:layout_height="17dp"
                            android:src="@drawable/topi_ic"
                            android:visibility="visible" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.4"
                    android:orientation="vertical"
                    android:padding="6sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2sp"
                        android:layout_marginRight="2sp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:id="@+id/comment_two_user_name"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"

                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="GlitterStorm"
                            android:textColor="#caccca"

                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewItalic
                            android:id="@+id/comment_two_date"
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="right"
                            android:text="25 Aug 2017"
                            android:textColor="#caccca"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/comment_two_comment_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2sp"
                        android:layout_marginTop="3sp"
                        android:layout_marginRight="2sp"
                        android:text="Lorem ipsum dolor sit met, consectetur adipiscing elit. Aliquam lorem lacks, efficture at fermentum quis. Vivamos id velho rhoncus."
                        android:textColor="#c4c4c4"
                        android:textSize="12sp" />


                    <RelativeLayout
                        android:id="@+id/second_attttach"
                        android:layout_width="65sp"
                        android:layout_height="65sp"
                        android:layout_marginTop="12sp">

                        <ImageView
                            android:id="@+id/comment_attachment_two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image_plaecholder_bg" />

                        <ImageView
                            android:id="@+id/comment_two_video_icon"
                            android:layout_width="38sp"
                            android:layout_height="38sp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:alpha="0.86"
                            android:src="@drawable/ic_video_play_icon"
                            android:visibility="gone" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/comment_two_rating_img"
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:padding="6.5sp"
                        android:src="@drawable/star_fill" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/comment_two_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.0"
                        android:textColor="#e070e0"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/comment_two_like"
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="20sp"
                        android:padding="5sp"
                        android:src="@drawable/ic_like_icon" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/second_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/reply_layout_two"
                layout="@layout/budz_reply_layout_two"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:weightSum="10">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_weight="1.4" />

                <LinearLayout

                    android:id="@+id/comment_two_reply"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:padding="9sp"
                        android:src="@drawable/ic_reply_budz" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="Reply"
                        android:textColor="#932a88"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_two_share"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"

                    android:gravity="center_vertical|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:padding="9sp"
                        android:src="@drawable/ic_share_white" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="Share"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/repote_it_item_two"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.4"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/edit_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8sp"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ic_edit_two"
                            android:layout_width="32sp"
                            android:layout_height="32sp"
                            android:layout_centerInParent="true"
                            android:padding="9sp"
                            android:src="@drawable/ic_edit_white" />

                        <ImageView
                            android:id="@+id/ic_delete_two"
                            android:layout_width="32sp"
                            android:layout_height="32sp"
                            android:layout_alignParentEnd="true"
                            android:padding="9sp"
                            android:src="@drawable/ic_delete_white" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/report_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8sp"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/comment_two_report_icon"
                            android:layout_width="32sp"
                            android:layout_height="32sp"
                            android:padding="9sp"
                            android:src="@drawable/ic_flag_white" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:id="@+id/comment_two_report_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Report"
                            android:textColor="@color/white"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingRight="20sp">

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:gravity="center_vertical"
            android:text="Add Your Comment Below"
            android:textColor="#923a88"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/answer_fragment_edittext_bg"
            android:padding="14sp">

            <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                android:id="@+id/commment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="top|left"
                android:hint="Type your comment here..."
                android:imeOptions="actionNext"
                android:inputType="textAutoComplete|textAutoCorrect|textMultiLine|textCapSentences"
                android:maxLength="500"
                android:maxLines="5"
                android:textColor="#383838"
                android:textSize="16sp" />
        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/question_detail_character_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="3sp"
            android:text="Max.500 Characters"
            android:textColor="#e4e4e5"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37sp"
            android:layout_marginTop="18sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/upload_comment_image"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:background="@drawable/shoot_out_bg"
                android:text="Upload"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6.6"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="AN IMAGE OR VIDEO"
                    android:textColor="#e4e4e5"
                    android:textSize="14sp" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0sp"
                    android:gravity="center_vertical"
                    android:text="(20 sec max.)"
                    android:textColor="#e4e4e5"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="14sp"
            android:layout_marginRight="10sp"
            android:background="#363636" />

        <LinearLayout
            android:id="@+id/comment_image_layout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="10">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="12sp"
                android:src="@drawable/ic_attatch_ment" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/attachement_img"
                    android:layout_width="33sp"
                    android:layout_height="33sp"
                    android:background="@drawable/test_img" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/attachment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="image.png"
                    android:textColor="#e4e4e5"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:id="@+id/attatchment_cross"
                android:layout_width="0sp"
                android:layout_height="match_parent"
