<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="30sp">

        <RelativeLayout
            android:id="@+id/sqe_one"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#1f1f1f">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="42sp"
                android:layout_height="match_parent"
                android:padding="2sp"
                android:src="@drawable/ic_back_icon" />

            <ImageView
                android:id="@+id/home_btn"
                android:layout_width="42sp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/back_btn"
                android:padding="7sp"
                android:src="@drawable/ic_home_icon" />

            <LinearLayout
                android:layout_width="110sp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12sp"
                android:gravity="center"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/dots_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="uploading"
                        android:textColor="#FFF"
                        android:textSize="8sp" />

                    <com.codingpixel.healingbudz.customeUI.LoadingDots
                        android:id="@+id/loading_dots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:gravity="center"
                        app:LoadingDots_auto_play="true"
                        app:LoadingDots_dots_color="@android:color/white"
                        app:LoadingDots_dots_count="6"
                        app:LoadingDots_dots_size="4dp"
                        app:LoadingDots_dots_space="4dp"
                        app:LoadingDots_jump_duration="200"
                        app:LoadingDots_jump_height="8dp"
                        app:LoadingDots_loop_duration="800"
                        app:LoadingDots_loop_start_delay="100" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:background="#7cc144"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/journel_image"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"
                android:background="#3b000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/upload_img_video"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36sp"
                        android:background="#FFF"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="6sp">

                        <ImageView
                            android:layout_width="15sp"
                            android:layout_height="14sp"
                            android:src="@drawable/ic_upload_jornal_icon" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_marginTop="1sp"
                            android:text="UPLOAD PHOTOS OR VIDEOS"
                            android:textColor="#7cc144"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:gravity="center"
                        android:text="Max 3 Photos/Videos"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="160sp"
                android:layout_height="45sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:weightSum="6">

                <RelativeLayout
                    android:id="@+id/attachment_three"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2sp"
                    android:layout_weight="2"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp">

                        <ImageView
                            android:id="@+id/attachment_three_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/attachment_three_video"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_play_attachment"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/attachment_three_cross"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="8sp"
                        android:paddingLeft="7sp"
                        android:src="@drawable/ic_cross_image" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attachment_two"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2sp"
                    android:layout_weight="2"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp">

                        <ImageView
                            android:id="@+id/attachment_two_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/attachment_two_video"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_play_attachment"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/attachment_two_cross"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="8sp"
                        android:paddingLeft="7sp"
                        android:src="@drawable/ic_cross_image" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/attachment_one"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4sp"
                    android:layout_marginTop="2sp"
                    android:layout_weight="2"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp">

                        <ImageView
                            android:id="@+id/attachment_one_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/attachment_one_video"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_play_attachment"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/attachment_one_cross"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="8sp"
                        android:paddingLeft="7sp"
                        android:src="@drawable/ic_cross_image" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:paddingLeft="12sp"
            android:paddingRight="12sp"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="8.8"
                android:orientation="horizontal"
                android:paddingLeft="5sp">

                <ImageView
                    android:layout_width="33sp"
                    android:layout_height="35sp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_pick_date" />
                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10sp"
                    android:text="01"
                    android:layout_marginTop="-4sp"
                    android:textColor="#e4e4e5"
                    android:textSize="40sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="2sp">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/day_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:textColor="#e4e4e5"
                        android:textSize="18sp" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/mnth_year_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FEBRUARY ,2017"
                        android:textColor="#e4e4e5"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/date_picker_edit"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:padding="9sp"
                android:src="@drawable/ic_edit_white" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:background="#4f4e50" />

        <LinearLayout
            android:id="@+id/feeling_dialog"
            android:layout_width="match_parent"
            android:layout_height="46sp"
            android:layout_marginTop="4sp"
            android:orientation="horizontal"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="7.8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How I'm feeling:"
                    android:textColor="#e4e4e5"
                    android:textSize="18sp" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:id="@+id/feeling_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="smile"
                    android:textColor="#e4e4e5"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/feeling_iconn"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="6sp"
                    android:src="@drawable/smile" />

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:background="#4f4e50" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="4sp"
            android:orientation="horizontal"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="8.8"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="18sp"
                        android:layout_height="18sp"
                        android:src="@drawable/ic_journal_name_icon" />
                </LinearLayout>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8sp"
                    android:gravity="center_vertical"
                    android:minHeight="38sp"
                    android:id="@+id/journal_name"
                    android:text="Journal Name"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:padding="7sp"
                android:src="@drawable/ic_edit_white" />

        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealinBudEditText
            android:id="@+id/entry_title"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:background="@color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Entry Title..."
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="#726f6a"
            android:textCursorDrawable="@drawable/edit_text_cursor_drawable_white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginTop="8sp"
            android:background="@drawable/answer_fragment_edittext_bg"
            android:padding="14sp">

            <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                android:id="@+id/event_detail_textfiled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="top|left"
                android:hint="Enter Description...."
                android:maxLength="300"
                android:textSize="16sp"
                android:textColor="#383838" />
        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/character_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26sp"
            android:layout_marginRight="26sp"
            android:layout_marginTop="4sp"
            android:gravity="left"
            android:paddingTop="3sp"
            android:text="Char:0\t\t\t\tWords:0"
            android:textSize="14sp"
            android:textColor="#e4e4e5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:orientation="vertical"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="15sp"
                    android:src="@drawable/ic_pin"/>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:text="Select Tags:"
                    android:textSize="18sp"
                    android:layout_marginLeft="4sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/tags_recyler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:orientation="vertical"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:src="@drawable/ic_tab_strain"/>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tag a Strain:"
                    android:textSize="18sp"
                    android:layout_marginLeft="4sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <AutoCompleteTextView
                android:id="@+id/search_Strain"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="@color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Search Strains..."
                android:paddingLeft="4sp"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#FFF"
                android:textColorHint="#7a796e"
                android:textCursorDrawable="@drawable/edit_text_cursor_drawable_white"
                android:textSize="20sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/strain_recyler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
            android:id="@+id/save_publish"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="18sp"
            android:layout_marginRight="18sp"
            android:layout_marginTop="12sp"
            android:background="@drawable/save_and_publish_journal"
            android:text="SAVE &amp; PUBLISH"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>