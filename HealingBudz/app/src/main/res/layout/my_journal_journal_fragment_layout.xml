<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codingpixel.healingbudz.activity.home.home_fragment.journal_tab.JournalDetailsActivity">

    <RelativeLayout
        android:id="@+id/filtr"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:layout_marginTop="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"
                android:layout_weight="10"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/add_new_journal"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.9"
                    android:background="@drawable/add_journal_entry_btn"

                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:layout_gravity="center"
                        android:padding="0sp"
                        android:src="@drawable/ic_add_new_journal" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="ADD JOURNAL"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.3"
                    android:id="@+id/public_private_filter"
                   android:gravity="center_vertical|right">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SORT"
                        android:id="@+id/sort_text_main"
                        android:textColor="#e4e4e5"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="30sp"
                        android:alpha="0.7"
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/filtr"
        android:layout_marginTop="6sp"
        android:background="#4d4948" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/line_top">
        <LinearLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="14sp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/loading_spinner"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:indeterminateTint="#ffffff"
                android:indeterminateTintMode="src_atop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:text="Loading..."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/journal_fragment_recyler_view" />
    </LinearLayout>
</RelativeLayout>
