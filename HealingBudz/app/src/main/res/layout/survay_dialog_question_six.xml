<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp">

            <RelativeLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:orientation="vertical"
                android:paddingBottom="18sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">


                    <LinearLayout
                        android:id="@+id/top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shoot_out_dialog_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:id="@+id/first_textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="QUESTION 6/6"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewItalic
                                android:id="@+id/second_textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/first_textview"
                                android:gravity="center"
                                android:text="@string/question_6"
                                android:textColor="@color/brown_question"
                                android:textSize="18sp"
                                android:textStyle="italic" />

                            <View
                                android:id="@+id/view_line"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/second_textview"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="7dp"
                                android:background="#666666"
                                android:visibility="invisible" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                android:id="@+id/add_upto_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/view_line"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:text="Add up to 3"
                                android:textColor="@color/light_grey"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/six_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/add_upto_3"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:visibility="visible" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:id="@+id/selected_first_item"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/add_upto_3"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:visibility="gone" />


                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bottom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/strain_filter_dialog_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="6sp"
                        android:paddingTop="6dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:id="@+id/selected_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:id="@+id/add_another_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="40sp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginLeft="24sp"
                                        android:layout_marginRight="24sp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/add_onther_bud_invited_group_section_btn_bg"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                        <ImageView
                                            android:layout_width="36sp"
                                            android:layout_height="36sp"
                                            android:padding="7sp"
                                            android:src="@drawable/ic_invite_groups_bud_add_btn" />

                                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="6sp"
                                            android:text="add flavor"
                                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                            android:textColor="#999999" />
                                    </LinearLayout>

                                    <!-- <Button
                                         android:id="@+id/spinner"
                                         android:layout_width="match_parent"
                                         android:layout_height="wrap_content"
                                         android:layout_margin="8dp"
                                         android:background="@drawable/budz_map_dialog_green_btn_bg"
                                         android:paddingLeft="20dp"
                                         android:paddingRight="5dp"
                                         android:text="Select Araes" />-->
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/save_continue_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/selected_layout"
                                android:visibility="gone">

                                <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                                    android:id="@+id/save_continue"
                                    android:layout_width="match_parent"
                                    android:layout_height="40sp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@drawable/strain_help_me_find_matches_btn_bg"
                                    android:text="Save &amp; Continue"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/cross_button"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignEnd="@+id/relativeLayout"
            android:layout_alignRight="@+id/relativeLayout"
            android:layout_alignTop="@+id/relativeLayout"
            android:paddingBottom="10sp"
            android:paddingLeft="10sp"
            android:src="@drawable/ic_cross_strain_yellow" />

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignLeft="@+id/relativeLayout"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_alignTop="@+id/relativeLayout"
            android:paddingBottom="10sp"
            android:paddingRight="10sp"
            android:src="@drawable/ic_cross_back_btn" />
    </RelativeLayout>


</LinearLayout>