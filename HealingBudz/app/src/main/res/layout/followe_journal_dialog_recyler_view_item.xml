<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38sp"
        android:orientation="horizontal"
        android:paddingLeft="6sp"
        android:paddingRight="6sp">

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="John Alex"
            android:textColor="#464645"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/follow_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/f_btn"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_margin="5sp"
                android:background="@drawable/add_journal_entry_btn"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="8sp"
                android:paddingRight="5sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:id="@+id/follow_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Follow"
                    android:textAllCaps="true"
                    android:textColor="#486136"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/followe_icon"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:padding="2sp"
                    android:src="@drawable/ic_profile_add" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="1sp"
        android:background="#bcc4c3c3" />

</LinearLayout>