<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#252525"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        android:paddingLeft="14sp"
        android:paddingRight="14sp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/icon_img"
            android:layout_width="0sp"
            android:layout_height="30sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1.1"
            android:padding="4sp"
            android:src="@drawable/ic_group_green" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
            android:id="@+id/text_icon"
            android:layout_width="0sp"
            android:layout_height="30sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1.1"
            android:gravity="center_horizontal"
            android:text="A:"
            android:textColor="#7cc144"
            android:textSize="20sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="8.9"
            android:orientation="vertical"
            android:paddingBottom="6sp"
            android:paddingLeft="6sp"
            android:paddingTop="6sp">

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/title_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:text="BesterBud is now following you."
                android:textColor="#7bc044"
                android:textSize="11sp" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/heading_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1sp"

                android:layout_marginTop="1sp"
                android:maxLines="4"
                android:text="Q: Should i warm Canniban Oil before applying?"
                android:textColor="#e4e4e5"
                android:textSize="13sp" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1sp"
                android:layout_marginTop="1sp"
                android:singleLine="true"
                android:text="10 minutes ago"
                android:textColor="#545454"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="6sp"
        android:background="#1c1c1c" />
</LinearLayout>