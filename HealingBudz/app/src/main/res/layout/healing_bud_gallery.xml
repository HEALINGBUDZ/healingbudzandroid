<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="vertical"
    tools:context="com.codingpixel.healingbudz.activity.home.home_fragment.budz_map_tab.BudzMapDetailsImagesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/sqe_one"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="#1f1f1f">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="42sp"
                    android:layout_height="match_parent"
                    android:padding="2sp"
                    android:src="@drawable/ic_back_icon" />

                <ImageView
                    android:id="@+id/home_btn"
                    android:layout_width="42sp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/back_btn"
                    android:padding="7sp"
                    android:src="@drawable/ic_home_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/home_btn"
                    android:gravity="center_horizontal|start"
                    android:orientation="horizontal"
                    android:paddingEnd="?actionBarSize">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/q_a_menu_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingBottom="4sp"
                        android:paddingLeft="5sp"
                        android:singleLine="true"
                        android:text="HealingBud Gallery"
                        android:textColor="#e8e8e8"
                        android:textSize="19sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/upload_btn"
                    android:layout_width="?actionBarSize"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:padding="15sp"
                    android:src="@drawable/ic_upload_budz_map_icon"
                    android:tint="@color/white"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/download_btn"
                    android:layout_width="?actionBarSize"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:padding="15sp"
                    android:src="@drawable/ic_download"
                    android:tint="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/image_showing_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10">

                <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/complete_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_text_img_1"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_content"
            android:background="#252525"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10sp">

            <LinearLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="14sp"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/loading_spinner"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:indeterminateTint="#ffffff"
                    android:indeterminateTintMode="src_atop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:text="Loading..."

                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/no_recorcd_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No record found in gallery!"
                android:textColor="#a9a7a7"
                android:visibility="gone" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/images_gallery_recyler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
