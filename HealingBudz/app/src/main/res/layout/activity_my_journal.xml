<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    tools:context="com.codingpixel.healingbudz.activity.home.side_menu.my_journal.MyJournalActivity">

    <RelativeLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#1f1f1f">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="42sp"
            android:layout_height="match_parent"
            android:padding="2sp"
            android:src="@drawable/ic_back_icon" />

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="42sp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/back_btn"
            android:padding="7sp"
            android:src="@drawable/ic_home_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/q_a_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="4sp"
                android:paddingLeft="4sp"
                android:text="My Journals"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:visibility="invisible"
            android:layout_marginRight="6sp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_search_white_gray_nyjournal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:layout_marginTop="-15sp"
        android:padding="12sp"
        android:id="@+id/main_top_contnet"
        android:layout_below="@+id/top_menu"
        android:weightSum="10">
        <com.codingpixel.healingbudz.customeUI.CircularImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:padding="12sp"
            android:id="@+id/my_journal_usr_img"
            android:src="@drawable/ic_discuss_question_profile"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="6.8"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">
                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:textSize="15sp"
                    android:gravity="right|center_vertical"
                    android:textColor="#c4c4c4"
                    android:text="Total Journals:"/>
                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:padding="6sp"
                    android:layout_marginLeft="6sp"
                    android:src="@drawable/ic_journal_gray_icon"/>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="top|center_horizontal"
                    android:textSize="18sp"
                    android:id="@+id/total_journals"
                    android:textColor="#c3c3c3"
                    android:textStyle="bold"
                    android:text="12"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:gravity="center"
                android:layout_marginTop="6sp"
                android:layout_marginBottom="6sp"
                android:orientation="horizontal"
                android:weightSum="10">
                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:textSize="15sp"
                    android:gravity="right|center_vertical"
                    android:textColor="#c4c4c4"
                    android:text="Total Tags:"/>
                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:padding="6sp"
                    android:layout_marginLeft="6sp"
                    android:src="@drawable/ic_pin_gray_icon_myjournal"/>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="top|center_horizontal"
                    android:textSize="18sp"
                    android:id="@+id/total_tags"
                    android:textColor="#c3c3c3"
                    android:textStyle="bold"
                    android:text="6"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">
                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="right|center_vertical"
                    android:textColor="#c4c4c4"
                    android:textSize="15sp"
                    android:text="Total Entries Today:"/>
                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:padding="6sp"
                    android:layout_marginLeft="6sp"
                    android:src="@drawable/ic_pin_edit_myjournal"/>
                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="top|center_horizontal"
                    android:textSize="18sp"
                    android:textColor="#c3c3c3"
                    android:textStyle="bold"
                    android:id="@+id/entries_today"
                    android:text="3"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/main_top_contnet">
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:id="@+id/top_line"
            android:background="#5f5c5c"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:weightSum="9">
            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="#6fa943"
                android:id="@+id/tab_one_bg"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:id="@+id/tab_one_icon"
                        android:padding="3sp"
                        android:src="@drawable/ic_calaneder_white"/>
                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MOOD CALENDAR"
                        android:textSize="11sp"
                        android:id="@+id/tab_one_text"
                        android:textStyle="bold"
                        android:layout_marginTop="3sp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/tab_two_bg"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:padding="3sp"
                        android:id="@+id/tab_two_icon"
                        android:src="@drawable/ic_journal_gray_icon"/>
                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JOURNALS"
                        android:id="@+id/tab_two_text"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3sp"
                        android:textColor="#c4c4c4" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:id="@+id/tab_three_bg"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="32sp"
                        android:padding="3sp"
                        android:id="@+id/tab_three_icon"
                        android:src="@drawable/ic_pin_gray_icon_myjournal"/>
                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TAGS"
                        android:id="@+id/tab_three_text"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3sp"
                        android:textColor="#c4c4c4" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_below="@+id/main_top_contnet"
            android:background="#6fa943"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6sp"
                android:id="@+id/content_fragment"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/search_menu"
        android:layout_width="match_parent"
        android:layout_below="@+id/top_menu"
        android:layout_marginTop="-14sp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/indi_catr"
            android:layout_marginRight="22sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_up_arrow_indicator_journal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#4c4c4c"
            android:layout_marginTop="-6sp"
            android:layout_below="@+id/indi_catr"
            android:layout_height="?android:attr/actionBarSize">
            <RelativeLayout
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="42sp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2sp"
                    android:layout_marginBottom="2sp"
                    android:background="@drawable/qa_fragment_search_bg">
                    <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:id="@+id/search_field"
                        android:hint="search"
                        android:singleLine="true"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="42sp"
                        android:src="@drawable/ic_search_white_gray_nyjournal"
                        android:layout_height="match_parent"
                        android:padding="7sp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
