<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stripe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:background="@color/transparent">

            <RelativeLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:background="@drawable/budz_map_payment_dialog_bg"
                android:paddingBottom="18sp">

                <LinearLayout
                    android:id="@+id/first_dialog_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:text="Healing Budz"
                        android:textColor="#932a88"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subscription For Buying Budz"
                        android:textColor="#932a88"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginTop="18sp"
                        android:background="#203b3b3b" />

                    <com.stripe.android.view.CardInputWidget
                        android:id="@+id/card_input_widget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        stripe:cardTextErrorColor="@android:color/holo_orange_dark"
                        stripe:cardTint="@android:color/holo_purple" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="#203b3b3b" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                        android:id="@+id/payy"
                        android:layout_width="match_parent"
                        android:layout_height="36sp"
                        android:layout_marginTop="12sp"
                        android:background="@drawable/q_a_menu_ask_q_button"
                        android:text="Pay $99.99"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/cross_btn"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:src="@drawable/ic_save_dialog_cross" />


            <ImageView
                android:id="@+id/premium_tag"
                android:layout_width="70sp"
                android:layout_height="100sp"
                android:layout_margin="5sp"
                android:background="@drawable/ic_premium_tag_icon"
                android:visibility="gone" />


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>