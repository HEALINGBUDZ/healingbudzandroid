<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginStart="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/like_pop_up_bg"
        android:orientation="horizontal"
        android:padding="4dp">

        <View
            android:id="@+id/popup_like_post_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/smiley" />

        <View
            android:id="@+id/popup_like_post_2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/smiley" />

        <View
            android:id="@+id/popup_like_post_3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/smiley" />

        <View
            android:id="@+id/popup_like_post_4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/smiley" />

        <View
            android:id="@+id/popup_like_post_5"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/smiley" />

        <View
            android:id="@+id/popup_like_post_6"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/smiley" />

    </LinearLayout>

</HorizontalScrollView>