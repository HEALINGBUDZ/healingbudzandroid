<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="vertical"
    tools:context="com.codingpixel.healingbudz.activity.home.home_fragment.journal_tab.JournalDetailsActivity">

    <RelativeLayout
        android:id="@+id/top_one"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#1f1f1f">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="42sp"
            android:layout_height="match_parent"
            android:padding="2sp"
            android:src="@drawable/ic_back_icon" />

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="42sp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/back_btn"
            android:padding="7sp"
            android:src="@drawable/ic_home_icon" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/journal_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/home_btn"
            android:layout_toLeftOf="@+id/right_buttons"
            android:gravity="center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:text="Test Journal is the sfs dffds sdfjdf sdfsd"
            android:maxLines="1"
            android:paddingLeft="5sp"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="140sp"
            android:gravity="right"
            android:id="@+id/right_buttons"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5sp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/favorite"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="9sp"
                android:src="@drawable/ic_favorite_border_journal" />

            <ImageView
                android:id="@+id/share_it"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="9sp"
                android:src="@drawable/ic_share_journal" />

            <ImageView
                android:id="@+id/edit_journal"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="9sp"
                android:src="@drawable/ic_edit_journal" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/filtr"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:layout_below="@+id/top_one"
        android:layout_marginTop="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp"
                android:layout_weight="9"
                android:gravity="right"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:weightSum="10">

                <LinearLayout
                    android:id="@+id/add_new_journal"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="9.5"
                    android:background="@drawable/add_journal_entry_btn"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="28sp"
                        android:layout_height="28sp"
                        android:padding="4sp"
                        android:src="@drawable/ic_add_new_journal" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD ENTRY"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:visibility="gone"
                    android:id="@+id/public_private_filter"
                    android:background="@drawable/journal_public_private_filter"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Public"
                        android:id="@+id/pp_text_main"
                        android:textColor="#5d8036"
                        android:textSize="17sp" />

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:padding="5sp"
                        android:id="@+id/pp_filter_icon"
                        android:src="@drawable/ic_public_icon_journal" />

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/ic_journal_public_private_down" />
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15sp"
                android:id="@+id/clp_exp"
                android:src="@drawable/ic_menu_dots_journal_details" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/filtr"
        android:layout_marginTop="6sp"
        android:background="#4d4948" />

    <RelativeLayout
        android:id="@+id/followers"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/line_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingRight="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journal Followers:"
            android:layout_centerVertical="true"
            android:textColor="#989392"
            android:id="@+id/follow_heading"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@+id/follow_heading"
            android:layout_centerVertical="true"
            android:id="@+id/follower_journal_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10sp"
                android:layout_height="18sp"
                android:src="@drawable/ic_user_person" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6sp"
                android:id="@+id/journal_budz"
                android:textColor="#6ea33f" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/follow_journlaa"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow"
                android:id="@+id/follow_text"
                android:layout_marginRight="6sp"
                android:textColor="#8b8a89"/>
            <ImageView
                android:layout_width="28sp"
                android:layout_height="match_parent"
                android:padding="6sp"
                android:id="@+id/follow_journal"
                android:src="@drawable/ic_profile_add"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:id="@+id/followers_line"
        android:layout_below="@+id/followers"
        android:layout_marginTop="6sp"
        android:background="#4d4948" />
    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
        android:id="@+id/no_record_found"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="No Record Found!"
        android:textColor="#989392"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12sp"
        android:layout_below="@+id/followers_line"
        android:id="@+id/swipe_to_refresh_layout">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/journal_detail_recyler_view" />

    </android.support.v4.widget.SwipeRefreshLayout>


    <RelativeLayout
        android:id="@+id/public_private_dialog"
        android:layout_width="150sp"
        android:layout_height="100sp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_below="@id/filtr"
        android:layout_marginRight="50sp"
        android:layout_marginTop="-5sp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5sp"
            android:background="@drawable/ic_up_arrow_indicator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12sp"
            android:background="@drawable/menu_dialog_bg"
            android:gravity="center"
            android:padding="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:weightSum="10"
                android:id="@+id/filtr_public"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="4sp"
                    android:id="@+id/public_icon"
                    android:src="@drawable/ic_public_icon_journal_checked" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="Public"
                    android:layout_weight="6"
                    android:id="@+id/public_text"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#232323" />
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="7sp"
                    android:id="@+id/public_tick"
                    android:src="@drawable/ic_check_journal_pp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:weightSum="10"
                android:id="@+id/filtr_private"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="4sp"
                    android:id="@+id/private_icon"
                    android:src="@drawable/ic_private_icon_journal_unchecked" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="Private"
                    android:id="@+id/private_text"
                    android:layout_weight="6"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#656666" />
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="7sp"
                    android:id="@+id/private_tick"
                    android:visibility="gone"
                    android:src="@drawable/ic_check_journal_pp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/exp_collasp_dialog"
        android:layout_width="150sp"
        android:layout_height="100sp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_below="@id/filtr"
        android:layout_marginRight="12sp"
        android:layout_marginTop="-10sp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5sp"
            android:background="@drawable/ic_up_arrow_indicator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12sp"
            android:background="@drawable/menu_dialog_bg"
            android:gravity="center"
            android:padding="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:weightSum="10"
                android:id="@+id/expand_all"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="4sp"
                    android:id="@+id/expand_icon"
                    android:src="@drawable/ic_expand_checked" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="Expand All"
                    android:layout_weight="6"
                    android:id="@+id/expand_text"
                    android:textColor="#232323" />
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="7sp"
                    android:id="@+id/expand_tick"
                    android:src="@drawable/ic_check_journal_pp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:weightSum="10"
                android:id="@+id/collasp_all"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="4sp"
                    android:id="@+id/collasp_icon"
                    android:src="@drawable/ic_collapse_unchecked" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="Collapse All"
                    android:id="@+id/collasp_text"
                    android:layout_weight="6"
                    android:textColor="#656666" />
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="7sp"
                    android:id="@+id/collasp_tick"
                    android:visibility="gone"
                    android:src="@drawable/ic_check_journal_pp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
