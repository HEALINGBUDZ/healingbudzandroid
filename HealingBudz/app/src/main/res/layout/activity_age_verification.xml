<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".activity.splash.Splash">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg_img" />

    <LinearLayout
        android:id="@+id/main_contetn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="150sp"
            android:layout_height="130sp"
            android:src="@drawable/ic_logo"
            android:visibility="visible" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="The Community for Natural Healing"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="14sp"
            android:text="Age Verification"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="15sp"
            android:gravity="center"
            android:text="The services offered by this mobile app are intended for adults only. By entering, you verify that you are of age 21 or older."
            android:textColor="#c6c6c6"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42sp"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="39sp"
            android:layout_marginRight="16sp"
            android:gravity="center"
            android:weightSum="10">

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/enter"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:background="@drawable/get_started_btn"
                android:text="ENTER"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/exit"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:background="@drawable/get_started_btn"
                android:text="EXIT"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
