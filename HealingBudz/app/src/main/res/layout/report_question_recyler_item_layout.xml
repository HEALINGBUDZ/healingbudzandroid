<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:orientation="vertical">

    <View
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="4sp"
        android:background="#0083ca" />

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/indicator"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/text_img"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Q:"
            android:textColor="#0083cb"
            android:textSize="28sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_rscr"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="15sp"
            android:src="@drawable/ic_double_circle" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/q_a_header_list_title"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical|left"
            android:text="ANSWER IS OFFENCIVE"
            android:textSize="16sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#c5c4c4" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_alignParentBottom="true"
        android:background="#63252222" />
</RelativeLayout>