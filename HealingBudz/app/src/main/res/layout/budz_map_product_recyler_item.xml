<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232323"
    android:orientation="vertical">

    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:text="Indica"
        android:textColor="#932a88"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:orientation="vertical"
        android:padding="10sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8sp"
            android:weightSum="10">

            <RelativeLayout

                android:id="@+id/inidicator"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="2.4">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="#80000000" />
                <!-- android:background="@drawable/image_plaecholder_bg" -->
                <Button
                    android:id="@+id/count"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3sp"
                    android:layout_marginRight="3sp"
                    android:background="@drawable/ic_budz_map_images_counter_bg"
                    android:backgroundTint="@color/white"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="7sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="7.6"
                android:orientation="vertical"
                android:paddingLeft="12sp"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="4.8"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:orientation="vertical">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:id="@+id/heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Capri Sunset"
                            android:textColor="#c4c4c4"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="0sp"
                                android:paddingRight="4sp">

                                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                    android:id="@+id/ind"
                                    android:layout_width="12sp"
                                    android:layout_height="12sp"
                                    android:layout_marginEnd="3sp"
                                    android:background="@drawable/strain_liseted_alphabetically_border_bg_i"
                                    android:gravity="center"
                                    android:text="I"
                                    android:textColor="#AE59C2"
                                    android:textSize="8sp"
                                    android:visibility="gone" />

                                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                    android:id="@+id/stiv"
                                    android:layout_width="12sp"
                                    android:layout_height="12sp"
                                    android:layout_marginEnd="3sp"
                                    android:background="@drawable/strain_liseted_alphabetically_border_bg_s"
                                    android:gravity="center"
                                    android:text="S"
                                    android:textColor="#C24462"
                                    android:textSize="8sp"
                                    android:visibility="gone" />

                                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                    android:id="@+id/hind"
                                    android:layout_width="12sp"
                                    android:layout_height="12sp"
                                    android:layout_marginEnd="3sp"
                                    android:background="@drawable/strain_liseted_alphabetically_border_bg_h"
                                    android:gravity="center"
                                    android:text="H"
                                    android:textColor="#7CC244"
                                    android:textSize="8sp"
                                    android:visibility="gone" />

                                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                    android:id="@+id/setrain_type"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:gravity="center_vertical"
                                    android:text="indica"
                                    android:textColor="#e4e4e5"
                                    android:textSize="9sp" />
                            </LinearLayout>


                            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                android:id="@+id/thdd"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="6"
                                android:gravity="center_vertical|start"
                                android:text=".02% CBD | .10% THC"
                                android:textColor="#e4e4e5"
                                android:textSize="9sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/straint_layout"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:padding="10sp"
                            android:src="@drawable/ic_tab_strain" />

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:padding="14sp"
                            android:src="@drawable/ic_arrow_yellow" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="5.2"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="8">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/item_product_recyler_ciew"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/share_product_services"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="14sp"
                        android:src="@drawable/ic_share_white" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingEnd="20sp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="9sp"
                android:src="@drawable/ic_edit_journal"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="8sp"
                android:src="@drawable/ic_delete_dark_gray"
                android:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#353535" />
</LinearLayout>