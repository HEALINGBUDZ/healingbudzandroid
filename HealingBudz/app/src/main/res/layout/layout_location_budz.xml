<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20sp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="30sp"
                android:visibility="invisible"
                android:layout_weight="1.2"
                android:background="@drawable/budz_map_location_bg"
                android:gravity="right">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12sp"
                    android:src="@drawable/ic_location_white" />

            </LinearLayout>

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="4.2"
                android:layout_gravity="center"
                android:text="Location"
                android:paddingLeft="8sp"
                android:textColor="#932a88"
                android:textSize="13sp" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                android:layout_width="0sp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_weight="4.4"
                android:paddingLeft="5sp"
                android:text="Contact"
                android:textColor="#932a88"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:minHeight="48sp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="30sp"
                android:layout_weight="1.2"
                android:background="@drawable/budz_map_location_bg"
                android:gravity="right">

                <ImageView
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12sp"
                    android:src="@drawable/ic_location_white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.5"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="6sp">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Punjab University Hostel Rd, Punjab University New Campus, Lahore, Punjab, Pakistan"
                        android:textColor="#c4c4c4"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="5sp">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(305) 825-7777"
                        android:textColor="#c4c4c4"
                        android:textSize="12sp" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:autoLink="email"
                        android:textColor="#e773e7"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudButtonRegular
            android:id="@+id/call_user"
            android:layout_width="match_parent"
            android:layout_height="34sp"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:layout_marginTop="12sp"
            android:background="@drawable/shoot_out_bg"
            android:text="Click To Call"
            android:textAllCaps="false"
            android:textColor="#fdfbfd" />

        <com.codingpixel.healingbudz.customeUI.HealingBudButtonRegular
            android:id="@+id/show_pruproduct"
            android:layout_width="match_parent"
            android:layout_height="34sp"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:layout_marginTop="12sp"
            android:background="@drawable/shoot_out_bg"
            android:text="View Products &amp; Services"
            android:textAllCaps="false"
            android:textColor="#fdfbfd" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>