<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:orientation="vertical"
        android:padding="10sp">

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indica"
            android:textColor="#a63a9b"
            android:textSize="11sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8sp"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="2.4">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_item_img" />

                <Button
                    android:id="@+id/images_count"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_budz_map_images_counter_bg"
                    android:text="99+"
                    android:textColor="#424345"
                    android:textSize="7sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="7.6"
                android:orientation="vertical"
                android:paddingLeft="12sp"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="4.8"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Capri Sunset"
                            android:textColor="#c4c4c4"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                android:id="@+id/strain_type"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center_vertical"
                                android:text="indica"
                                android:textColor="#e4e4e5"
                                android:textSize="7sp" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                                android:id="@+id/other_text"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="6"
                                android:gravity="center_vertical"
                                android:text=".02% CBD | .10% THC"
                                android:textColor="#e4e4e5"
                                android:textSize="7sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="9sp"
                        android:src="@drawable/ic_share_white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="5.2"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="7">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/item_product_recyler_ciew"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/straint_layout"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:weightSum="10">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:id="@+id/distance"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:gravity="center_vertical|right"
                            android:text="34mi"
                            android:textColor="#e4e4e5"
                            android:textSize="7sp" />

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5sp"
                            android:layout_weight="1"
                            android:padding="0sp"
                            android:src="@drawable/ic_arrow_green" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#353535" />
</LinearLayout>