<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg_img">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.codingpixel.healingbudz.customeUI.HealingBudButton
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:textAllCaps="false"
            android:text="Skip >"
            android:id="@+id/skip"
            android:textColor="#c5c5c5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:layout_above="@+id/bottom_bar"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="26sp"
            android:id="@+id/top_layout"
            android:orientation="vertical">
            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:id="@+id/headeing"
                android:text="Enter Pin Code"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_marginBottom="14sp"
                android:gravity="center">
                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:id="@+id/pin_one"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/ic_camera_flash_bg"/>
                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:id="@+id/pin_two"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/ic_camera_flash_bg"/>
                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:id="@+id/pin_three"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/ic_camera_flash_bg"/>
                <ImageView
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:id="@+id/pin_four"
                    android:background="@drawable/ic_camera_flash_bg"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:gravity="center"
            android:layout_marginTop="8sp"
            android:weightSum="12">
            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:text="1"
                android:id="@+id/one"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="38sp"

                android:background="@drawable/pin_password_button_bg"/>
            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:text="2"
                android:id="@+id/two"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:layout_marginRight="26sp"
                android:layout_marginLeft="26sp"
                android:background="@drawable/pin_password_button_bg"/>
            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:text="3"
                android:id="@+id/three"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:background="@drawable/pin_password_button_bg"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:gravity="center"
            android:layout_marginTop="14sp"
            android:weightSum="12">
            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:text="4"
                android:id="@+id/four"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:background="@drawable/pin_password_button_bg"/>
            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:layout_marginRight="26sp"
                android:layout_marginLeft="26sp"
                android:text="5"
                android:id="@+id/five"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:background="@drawable/pin_password_button_bg"/>
            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:text="6"
                android:id="@+id/six"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:background="@drawable/pin_password_button_bg"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:gravity="center"
            android:layout_marginTop="14sp"
            android:weightSum="12">
            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:text="7"
                android:id="@+id/seven"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:background="@drawable/pin_password_button_bg"/>
            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:text="8"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:id="@+id/eight"
                android:layout_marginRight="26sp"
                android:layout_marginLeft="26sp"
                android:background="@drawable/pin_password_button_bg"/>
            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:text="9"
                android:id="@+id/nine"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:background="@drawable/pin_password_button_bg"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:gravity="center"
            android:weightSum="12"
            android:layout_marginTop="14sp">
            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="72sp"
                android:layout_height="72sp"
                android:text="0"
                android:gravity="center"
                android:id="@+id/zero"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:background="@drawable/pin_password_button_bg"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>