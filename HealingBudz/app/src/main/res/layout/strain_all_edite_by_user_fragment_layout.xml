<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="15sp"
    android:paddingRight="15sp"
    android:paddingTop="12sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10sp">

        <LinearLayout
            android:id="@+id/view_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Description:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#f0c12f" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:src="@drawable/ic_reward_like_strain_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#a43d56" />
            </LinearLayout>
        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/view_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_one"
            android:layout_marginTop="6sp"
            android:text="Girl Scout Cookies, or GSC, is an OG Kush Durban Poison hybrid cross whose reputation grew too large to stay within the borders of its California homeland. With a sweet and earthy aroma, Girl Scout Cookies launches you to euphoria’s top floor where full-body relaxation meets a time-bending cerebral space.A little goes a long way with this hybrid, whose THC heights have won Girl Scout Cookies numerous Cannabis Cup awards. Patients needing a strong dose of relief, however, may look to GSC for severe pain, nausea, and appetite loss. Girl Scout Cookies, or GSC, is an OG Kush and Durban poison hybrid cross whose reputation grew too large to stay within the borders of its California homeland. With a sweet and earthy aroma, Girl Scout Cookies launches you to euphoria’s top floor where full-body relaxation meets a time-bending cerebral space."
            android:textColor="#c4c1c1" />

        <View
            android:id="@+id/view_three"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/view_two"
            android:layout_marginTop="18sp"
            android:background="#3e3e3e" />

        <RelativeLayout
            android:id="@+id/type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_three"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type :"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#efc12f" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4sp"
                    android:text="Hybrid"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#b8b8b8" />

                <ImageView
                    android:id="@+id/hybrid_info_button"
                    android:layout_width="23sp"
                    android:layout_height="23sp"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/ic_info_icon" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="64sp"
                android:layout_below="@+id/one"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/back_view"
                    android:layout_width="match_parent"
                    android:layout_height="38sp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6sp"
                    android:layout_marginLeft="26sp"
                    android:layout_marginRight="26sp"
                    android:background="@drawable/seak_bar_bg"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="30%"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:text="70%"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/customSeekBar"
                    style="@style/tallerBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:max="100"
                    android:progress="30"
                    android:progressDrawable="@drawable/custom_progress"
                    android:splitTrack="false"
                    android:thumb="@drawable/ic_vertical_line_white" />
            </RelativeLayout>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_layout"
            android:id="@+id/seek_bar_below_layout"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/indica_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Indica"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#b8b8b8" />

                <ImageView
                    android:layout_width="23sp"
                    android:layout_height="23sp"
                    android:id="@+id/indica_info_button"
                    android:layout_marginLeft="10sp"
                    android:src="@drawable/ic_info_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sativa_info_button"
                    android:layout_width="23sp"
                    android:layout_height="23sp"
                    android:layout_marginRight="10sp"
                    android:src="@drawable/ic_info_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Sativa"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#b8b8b8" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_four"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/seek_bar_below_layout"
            android:layout_marginTop="12sp"
            android:background="#3e3e3e" />

        <TextView
            android:id="@+id/view_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_four"
            android:layout_marginTop="12sp"
            android:text="Parcentage / Genetics:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#f0c12f" />

        <LinearLayout
            android:id="@+id/view_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_five"
            android:layout_marginTop="12sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="70sp"
                android:layout_weight="2.5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4sp"
                    android:src="@drawable/ic_percentage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:orientation="vertical"
                android:paddingLeft="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="22sp"
                        android:gravity="center_vertical"
                        android:text="Cross-Breed of:"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#bcbebc" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36sp"
                        android:layout_marginTop="12sp"
                        android:orientation="horizontal">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6sp"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:text="Durban Poison"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="#f0c12f" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22sp"
                            android:layout_marginLeft="6sp"
                            android:layout_marginRight="6sp"
                            android:gravity="center_vertical"
                            android:text="and"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="#bcbebc" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:text="OG Kush"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="#f0c12f" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view_seven"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_below="@+id/view_six"
            android:layout_marginTop="12sp"
            android:background="#3e3e3e" />

        <TextView
            android:id="@+id/view_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_seven"
            android:layout_marginTop="12sp"
            android:text="Growing &amp; Care:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#f0c12f" />

        <LinearLayout
            android:id="@+id/view_nine"
            android:layout_width="match_parent"
            android:layout_height="94sp"
            android:layout_below="@+id/view_eight"
            android:layout_marginTop="12sp"
            android:orientation="horizontal"
            android:weightSum="4.3">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/add_strain_growing_care_active_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="6sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dificulty\nLevel"
                    android:textAllCaps="true"
                    android:textColor="#636463"
                    android:textSize="9sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/level_easy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="36sp"
                            android:padding="4sp"
                            android:src="@drawable/ic_easy_dft" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1sp"
                            android:text="Easy"
                            android:textColor="#a0a2a0"
                            android:textSize="10sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/add_strain_growing_care_active_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="6sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Mature\nHeight"
                    android:textAllCaps="true"
                    android:textColor="#636463"
                    android:textSize="9sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="4sp"
                    android:paddingTop="4sp">

                    <ImageView
                        android:layout_width="32sp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8sp"
                        android:layout_marginTop="8sp"
                        android:background="@drawable/ic_leaf_icon" />

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/ic_double_arrow" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/degree_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/white" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/add_strain_growing_care_active_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="8sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Following\nTime"
                    android:textAllCaps="true"
                    android:textColor="#636463"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60"
                        android:textColor="#c7a029"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5sp"
                        android:text="days"
                        android:textColor="#818281" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/add_strain_growing_care_active_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="8sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hardness\nZones"
                    android:textAllCaps="true"
                    android:textColor="#636463"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp">

                    <ImageView
                        android:layout_width="22sp"
                        android:layout_height="match_parent"
                        android:padding="2sp"
                        android:src="@drawable/ic_temp_ic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="4sp"
                        android:paddingTop="4sp"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30℉"
                            android:textColor="#bfbfbf"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="to"
                            android:textColor="#818281"
                            android:textSize="8sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50℉"
                            android:textColor="#bfbfbf"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20℃\t\t40℃"
                            android:textColor="#818281"
                            android:textSize="8sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_nine"
            android:layout_marginTop="20sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:text="Yield:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#c7c7c7" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yeild_low"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Low(Medium or High)"
                    android:textColor="#7e7e7e"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_elaven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_ten"
            android:layout_marginTop="12sp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:text="Climate:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#c7c7c7" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="InDoor, OutDoor, GreeHouses"
                    android:textColor="#7e7e7e"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_tewle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_elaven"
            android:layout_marginTop="12sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:text="Notes:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#c7c7c7" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Prefers moderate amounts of fertilizer, Average yield falls between 25-30 grams per plant. May express fruity or diesel-smelling phenotypes"
                    android:textColor="#7e7e7e"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>