<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="vertical"
    tools:context="com.codingpixel.healingbudz.activity.home.side_menu.messages.MessagesActivity">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_menu"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#252424">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="42sp"
                android:layout_height="match_parent"
                android:padding="2sp"
                android:src="@drawable/ic_back_icon" />

            <ImageView
                android:id="@+id/home_btn"
                android:layout_width="42sp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/back_btn"
                android:padding="7sp"
                android:src="@drawable/ic_home_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/add_new_journal"
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3sp"
                    android:padding="1sp"
                    android:src="@drawable/ic_favorite_journal_heart" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:id="@+id/q_a_menu_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="4sp"
                    android:text="My Saves"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_to_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_saves_recyler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12sp"
            android:layout_marginRight="12sp" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
        android:id="@+id/not_fount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"

        android:text="No Record Found!"
        android:textColor="@color/white"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/slide_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="-15sp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/slide_header_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp">

            <LinearLayout
                android:id="@+id/q_a_list"
                android:layout_width="match_parent"
                android:layout_height="280sp"
                android:background="#252424"
                android:orientation="vertical">

                <View
                    android:id="@+id/top_line"
                    android:layout_width="match_parent"
                    android:layout_height="4sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#505050" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="Filter by Type:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/home_search_filter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/close_filter"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="10sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:padding="2sp"
                                android:src="@drawable/ic_tab_qa" />

                            <View
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:text="Q&amp;A"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="#c5c4c4"
                                android:textSize="18sp" />

                            <com.codingpixel.healingbudz.customeUI.APPSwitch
                                android:id="@+id/q_a_switch"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:checked="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="6sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:padding="2sp"
                                android:src="@drawable/ic_tab_group" />

                            <View
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3" />

                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="GROUPS"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <com.codingpixel.healingbudz.customeUI.APPSwitch
                                android:id="@+id/group_switch"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:checked="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="6sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:padding="2sp"
                                android:src="@drawable/ic_tab_journal" />

                            <View
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3" />

                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="JOURNAL"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <com.codingpixel.healingbudz.customeUI.APPSwitch
                                android:id="@+id/journal_switch"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:checked="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="6sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:padding="2sp"
                                android:src="@drawable/budzmapnewic" />

                            <View
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3" />

                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:text="BUDZ ADZ"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <com.codingpixel.healingbudz.customeUI.APPSwitch
                                android:id="@+id/budz_switch"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:checked="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="6sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:padding="2sp"
                                android:src="@drawable/ic_tab_strain" />

                            <View
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3" />

                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:text="STRAINS"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <com.codingpixel.healingbudz.customeUI.APPSwitch
                                android:id="@+id/strain_switch"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:checked="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="6sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:padding="2sp"
                                android:src="@drawable/ic_save_icon_filter_dialog" />

                            <View
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3" />

                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:text="SEARCH SAVE"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <com.codingpixel.healingbudz.customeUI.APPSwitch
                                android:id="@+id/strain_switch_search"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:checked="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="6sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:padding="2sp"
                                android:src="@drawable/ic_save_clcik" />

                            <View
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3" />

                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:text="SPECIAL SAVE"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <com.codingpixel.healingbudz.customeUI.APPSwitch
                                android:id="@+id/special_switch_save"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:checked="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="6sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:padding="2sp"
                                android:src="@drawable/ic_message_green" />

                            <View
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3" />

                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:text="CHAT SAVE"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <com.codingpixel.healingbudz.customeUI.APPSwitch
                                android:id="@+id/chat_switch_save"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:checked="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_marginTop="6sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:padding="2sp"
                                android:src="@drawable/budzmapnewic" />

                            <View
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3" />

                            <TextView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.5"
                                android:singleLine="true"
                                android:gravity="center_vertical"
                                android:text="CHAT SAVE"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <com.codingpixel.healingbudz.customeUI.APPSwitch
                                android:id="@+id/chat_budz_switch_save"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:checked="true" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/q_a_list_bottom"
                android:layout_width="match_parent"
                android:layout_height="15sp"

                android:layout_below="@id/q_a_list"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#252424">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4sp"
                    android:layout_alignParentBottom="true"
                    android:background="#505050" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/indicator_close_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/q_a_list"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="30sp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/groups_msg_indicator_bg"
                    android:padding="7sp"
                    android:src="@drawable/groups_chat_indicator_up" />

                <ImageView
                    android:id="@+id/indicator_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="#86000000" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/indicator_layout"
            android:layout_width="65sp"
            android:layout_height="40sp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="30sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/groups_msg_indicator_bg"
                android:padding="7sp"
                android:src="@drawable/groups_chat_indicator_down" />

            <ImageView
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
