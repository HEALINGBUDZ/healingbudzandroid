<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/start_q"
        android:gravity="center"
        android:text="Q:"
        android:visibility="gone"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <LinearLayout

        android:id="@+id/main_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6sp"
        android:weightSum="10">

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="Q:"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="7.5"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:id="@+id/question"
            android:paddingLeft="8sp"
            android:singleLine="true"
            android:text="Should I smoke it?"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#c9c9c9" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical|center"
            android:text="120"
            android:id="@+id/answer_count"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7sp"
        android:layout_marginBottom="8sp"
        android:weightSum="10">

        <View
            android:layout_width="0sp"
            android:layout_height="1sp"
            android:layout_weight=".3" />
        <View
            android:layout_width="0sp"
            android:layout_height="1sp"
            android:background="#41464444"
            android:layout_weight="9.4"/>
        <View
            android:layout_width="0sp"
            android:layout_height="1sp"
            android:layout_weight=".2" />


    </LinearLayout>
</LinearLayout>