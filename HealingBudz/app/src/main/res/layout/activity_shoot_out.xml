<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="vertical"
    tools:context="com.codingpixel.healingbudz.activity.home.buz_feed.BuzzFeedActivity">

    <RelativeLayout
        android:id="@+id/sqe_one"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#1f1f1f">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="42sp"
            android:layout_height="match_parent"
            android:padding="2sp"
            android:src="@drawable/ic_back_icon" />

        <ImageView
            android:id="@+id/home_btn"
            android:layout_width="42sp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/back_btn"
            android:padding="7sp"
            android:src="@drawable/ic_home_icon" />

        <com.codingpixel.healingbudz.customeUI.HealingBudButton
            android:id="@+id/buzz_feed_clear_btn"
            android:layout_width="72sp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:gravity="bottom"
            android:paddingBottom="10sp"
            android:text="Clear All"
            android:textAllCaps="false"
            android:textColor="#595959"
            android:textSize="12sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26sp"
                android:layout_height="18sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/ic_shoot_out_purpole" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/q_a_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingBottom="4sp"
                android:text="Shout Outs"
                android:textColor="#e070e0"
                android:textSize="22sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/send_shoot_out"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="55sp"
            android:layout_marginRight="55sp"
            android:layout_marginTop="20sp"
            android:layout_weight="10"
            android:background="@drawable/shoot_out_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="26sp"
                android:layout_height="17sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/ic_home_shoot_out" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingBottom="4sp"
                android:text="SEND A SHOUT OUT"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_shoot_out"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="55sp"
            android:layout_marginRight="55sp"
            android:layout_marginTop="20sp"
            android:layout_weight="10"
            android:background="@drawable/shoot_out_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="26sp"
                android:layout_height="17sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/ic_home_shoot_out" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingBottom="4sp"
                android:text="BUY SUBSCRIPTION"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3sp"
        android:orientation="horizontal">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/buzz_feed_recyler_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

</LinearLayout>
