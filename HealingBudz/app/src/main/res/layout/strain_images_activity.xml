<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="vertical"
    tools:context="com.codingpixel.healingbudz.activity.home.home_fragment.budz_map_tab.BudzMapDetailsImagesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/sqe_one"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="#1f1f1f">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="42sp"
                    android:layout_height="match_parent"
                    android:padding="2sp"
                    android:src="@drawable/ic_back_icon" />

                <ImageView
                    android:id="@+id/home_btn"
                    android:layout_width="42sp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/back_btn"
                    android:padding="7sp"
                    android:src="@drawable/ic_home_icon" />

                <ImageView
                    android:id="@+id/upload_image_button"
                    android:layout_width="48sp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6sp"
                    android:padding="13sp"
                    android:src="@drawable/ic_upload_budz_map_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/q_a_menu_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="5sp"
                        android:paddingBottom="4sp"
                        android:text="Strain Gallery"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sqe_one"
                android:background="#252525"
                android:paddingTop="12sp">

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_image"
                    android:layout_marginBottom="14sp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16sp"
                        android:gravity="center"
                        android:paddingLeft="8sp"
                        android:paddingRight="8sp"
                        android:weightSum="10">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                            android:id="@+id/main_heading_title"
                            android:layout_width="0sp"
                            android:layout_height="34sp"
                            android:layout_weight="8"
                            android:gravity="center"
                            android:text="Girls Scout Cookies"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:id="@+id/strain_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hybrid"
                            android:textColor="#e4e4e5"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/review_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="7.3"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/rating_image"
                                    android:layout_width="27sp"
                                    android:layout_height="27sp"
                                    android:src="@drawable/ic_strain_rating_three" />

                                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                    android:id="@+id/rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5sp"
                                    android:gravity="center"
                                    android:text="3.5"
                                    android:textColor="#e4e4e5"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1sp"
                                android:layout_height="14sp"
                                android:layout_marginLeft="12sp"
                                android:layout_marginRight="12sp"
                                android:background="#FFFFFF" />

                            <LinearLayout
                                android:id="@+id/comment_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="23sp"
                                    android:layout_height="19sp"
                                    android:src="@drawable/ic_comment_icon" />

                                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                    android:id="@+id/total_reviews"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="6sp"
                                    android:gravity="center"
                                    android:text="200 Reviews"
                                    android:textColor="#e4e4e5"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/image_showing_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90sp"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10">

                <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/complete_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_text_img_1"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#252525"
            android:paddingTop="10sp">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/images_gallery_recyler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scrollIndicators="none"
                    android:scrollbars="none" />
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
