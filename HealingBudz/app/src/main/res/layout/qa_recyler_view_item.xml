<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_mob_id_add" />

    <LinearLayout
        android:id="@+id/main_q_a_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="175sp"
        android:orientation="horizontal"
        android:paddingStart="5sp"
        android:paddingTop="4sp"
        android:paddingEnd="5sp"
        android:paddingBottom="4sp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="8.4"
            android:background="@drawable/qa_question_list_item_bg"
            android:orientation="vertical"
            android:padding="8sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp">

                <LinearLayout
                    android:id="@+id/profile_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:weightSum="10">

                    <RelativeLayout
                        android:id="@+id/profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <com.codingpixel.healingbudz.customeUI.CircularImageView
                            android:id="@+id/user_img"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginTop="3sp"
                            android:layout_weight="2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user_profile" />

                        <ImageView
                            android:id="@+id/profile_img_topi"
                            android:layout_width="20sp"
                            android:layout_height="20dp"
                            android:src="@drawable/topi_ic"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/plus_icon"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="30sp"
                            android:src="@drawable/ic_profile_add"
                            android:visibility="gone" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="7.3"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="1sp">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:id="@+id/main_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Glitter Bomb"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:id="@+id/main_title_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="asks..."
                            android:textColor="#c6c4c5"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:weightSum="10">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:padding="4sp"
                        android:text="Q:"
                        android:textColor="#0083cb"
                        android:textSize="26sp" />

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_weight="8.3"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="1sp">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:id="@+id/question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:minLines="2"
                            android:text="Should I warm cannabis oil before applying?"
                            android:textColor="#c6c4c5"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attachment_view"
                android:layout_width="match_parent"
                android:layout_height="54sp"
                android:layout_marginTop="5sp"
                android:gravity="start"
                android:paddingTop="2sp"
                android:visibility="gone"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.5"
                    android:gravity="start|center_vertical"
                    android:weightSum="7.5">

                    <RelativeLayout
                        android:id="@+id/attachment_three"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2sp"
                        android:layout_weight="2.5"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5sp">

                            <com.codingpixel.healingbudz.customeUI.SelectableRoundedImageView
                                android:id="@+id/attachment_three_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/attachment_three_video"
                                android:layout_width="24sp"
                                android:layout_height="24sp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_play_attachment"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/attachment_three_cross"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="7sp"
                            android:paddingBottom="8sp"
                            android:src="@drawable/ic_cross_image"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/attachment_two"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2sp"
                        android:layout_weight="2.5"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5sp">

                            <com.codingpixel.healingbudz.customeUI.SelectableRoundedImageView
                                android:id="@+id/attachment_two_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/attachment_two_video"
                                android:layout_width="24sp"
                                android:layout_height="24sp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_play_attachment"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/attachment_two_cross"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="7sp"
                            android:paddingBottom="8sp"
                            android:src="@drawable/ic_cross_image"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/attachment_one"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2sp"
                        android:layout_marginRight="4sp"
                        android:layout_weight="2.5"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5sp">

                            <com.codingpixel.healingbudz.customeUI.SelectableRoundedImageView
                                android:id="@+id/attachment_one_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/attachment_one_video"
                                android:layout_width="24sp"
                                android:layout_height="24sp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_play_attachment"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/attachment_one_cross"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="7sp"
                            android:paddingBottom="8sp"
                            android:src="@drawable/ic_cross_image"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6" />

                <RelativeLayout

                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="4sp"
                    android:layout_weight="2.9"
                    android:background="@drawable/qa_question_list_item_bg"
                    android:padding="7sp"
                    android:visibility="gone"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="21sp"
                                android:layout_height="13sp"
                                android:src="@drawable/ic_reply_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="4sp">

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reply"
                                android:textColor="#cccccb"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.codingpixel.healingbudz.customeUI.HealingBudButton
                        android:id="@+id/reply_answer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:clickable="false" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33sp"
                android:layout_marginTop="10sp">

                <LinearLayout
                    android:id="@+id/bid_first_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:weightSum="12">

                    <View
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4" />

                    <ImageView
                        android:id="@+id/is_answered"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="1sp"
                        android:src="@drawable/ic_answered" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/ans_count"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/text_ans_count"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.9"
                        android:gravity="start|center_vertical"
                        android:padding="4sp"
                        android:text="ANSWERS"
                        android:textColor="#0083cb"
                        android:textSize="17sp" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudButtonRegular
                        android:id="@+id/qa_fragment_list_discuss_button"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.8"
                        android:background="@drawable/qa_question_list_item_bg"
                        android:text="DISCUSS"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                    android:id="@+id/first_bid_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="13sp"
                    android:layout_marginRight="13sp"
                    android:background="@drawable/q_a_menu_ask_q_button"
                    android:text="BE THE 1ˢᵗ BUD TO ANSWER"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/qa_question_list_item_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favorite_btn"
                android:layout_width="match_parent"
                android:layout_height="36sp"
                android:padding="8sp"
                android:src="@drawable/ic_favorite_border_black_24dp" />

            <ImageView
                android:id="@+id/report_it"
                android:layout_width="match_parent"
                android:layout_height="36sp"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="8sp"
                android:padding="8sp"
                android:src="@drawable/ic_qa_flag" />

            <ImageView
                android:id="@+id/share_qa_content"
                android:layout_width="match_parent"
                android:layout_height="36sp"
                android:padding="8sp"
                android:src="@drawable/ic_share_black_24dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/hottest"
        android:layout_width="90sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-6.5sp"
        android:layout_marginEnd="68sp"
        android:layout_weight="2.7"
        android:src="@drawable/ic_hottest" />
</RelativeLayout>