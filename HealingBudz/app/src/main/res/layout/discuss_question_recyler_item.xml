<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_mob_id_add" />

    <LinearLayout
        android:id="@+id/main_layout_whole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6sp"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/qa_question_list_item_bg"
            android:orientation="vertical"
            android:padding="16sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:weightSum="10">

                    <RelativeLayout
                        android:id="@+id/profile_image"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4">


                        <com.codingpixel.healingbudz.customeUI.CircularImageView
                            android:id="@+id/user_profile_img"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginTop="3sp"
                            android:layout_weight="2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user_profile" />

                        <ImageView
                            android:id="@+id/profile_img_topi"
                            android:layout_width="20sp"
                            android:layout_height="20dp"
                            android:src="@drawable/topi_ic"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/plus_icon"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="30sp"
                            android:src="@drawable/ic_profile_add"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/profile_name"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="4.3"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="1sp">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:id="@+id/answer_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Glitter Bomb"
                            android:textColor="#f89224"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2sp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/answer_user_points_image"
                                android:layout_width="15sp"
                                android:layout_height="19sp"
                                android:src="@drawable/ic_leafe_disscusspage" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:id="@+id/answer_user_points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3sp"
                                android:gravity="center_vertical"
                                android:text="355"
                                android:textColor="#f89224"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.2"
                        android:orientation="vertical">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:id="@+id/answer_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="06,10 2017 02:00 PM"
                            android:textColor="#a4a4a3"
                            android:textSize="11sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/like_answer_btn"
                                android:layout_width="48sp"
                                android:layout_height="match_parent"
                                android:padding="4sp"
                                android:src="@drawable/ic_thumb_unliked" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:id="@+id/like_answer_count"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:paddingBottom="5sp"
                                android:text="27"
                                android:textColor="#f6f5f3"
                                android:textSize="14sp" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/answer_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:gravity="center_vertical"
                android:text="The cannabis oil should be warmed before application. You’ll want to be sure to test it with a cooking thermometer and only apply it if it’s reached 90 degree farenhite. The canniban oil should be warmed before application. You’ll want to be sure to test it with a cooking thermometer and only apply it if it’s reached 90 degree farenhite."
                android:textColor="#e2e2e2"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/reply_layout"
                android:layout_width="match_parent"
                android:layout_height="54sp"
                android:layout_marginTop="5sp"
                android:gravity="start"
                android:paddingTop="2sp"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.5"
                    android:gravity="start|center_vertical"
                    android:weightSum="7.5">

                    <RelativeLayout
                        android:id="@+id/attachment_three"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2sp"
                        android:layout_weight="2.5"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5sp">

                            <com.codingpixel.healingbudz.customeUI.SelectableRoundedImageView
                                android:id="@+id/attachment_three_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/attachment_three_video"
                                android:layout_width="24sp"
                                android:layout_height="24sp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_play_attachment"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/attachment_three_cross"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="8sp"
                            android:paddingLeft="7sp"
                            android:src="@drawable/ic_cross_image"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/attachment_two"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2sp"
                        android:layout_weight="2.5"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5sp">

                            <com.codingpixel.healingbudz.customeUI.SelectableRoundedImageView
                                android:id="@+id/attachment_two_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/attachment_two_video"
                                android:layout_width="24sp"
                                android:layout_height="24sp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_play_attachment"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/attachment_two_cross"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="8sp"
                            android:paddingLeft="7sp"
                            android:src="@drawable/ic_cross_image"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/attachment_one"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4sp"
                        android:layout_marginTop="2sp"
                        android:layout_weight="2.5"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5sp">

                            <com.codingpixel.healingbudz.customeUI.SelectableRoundedImageView
                                android:id="@+id/attachment_one_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                            <ImageView
                                android:id="@+id/attachment_one_video"
                                android:layout_width="24sp"
                                android:layout_height="24sp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_play_attachment"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/attachment_one_cross"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_alignParentRight="true"
                            android:paddingBottom="8sp"
                            android:paddingLeft="7sp"
                            android:src="@drawable/ic_cross_image"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6" />

                <RelativeLayout

                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="4sp"
                    android:layout_weight="2.9"
                    android:background="@drawable/qa_question_list_item_bg"
                    android:padding="7sp"
                    android:visibility="gone"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="21sp"
                                android:layout_height="13sp"
                                android:src="@drawable/ic_reply_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="4sp">

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reply"
                                android:textColor="#cccccb"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.codingpixel.healingbudz.customeUI.HealingBudButton
                        android:id="@+id/reply_answer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:clickable="false" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46sp"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/report_answer_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/menu"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/flag_dialog_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="12sp"
                        android:paddingRight="12sp">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingRight="2sp"
                            android:text="!"
                            android:textColor="#c00302"
                            android:textSize="15sp" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Report"
                            android:textColor="#656666"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20sp"
                        android:layout_height="18sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="-6sp"
                        android:background="@drawable/ic_right_arrow_indicator" />

                </LinearLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/answer_date_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="start"
                    android:text="06,10 2017 02:00 PM"
                    android:textColor="#a4a4a3"
                    android:textSize="11sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/edit_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5sp"
                    android:layout_toRightOf="@+id/answer_date_edit"
                    android:background="@drawable/edit_diss"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6sp">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="10sp"
                        android:layout_height="10sp"
                        android:layout_marginEnd="5sp"
                        android:layout_marginTop="1sp"
                        android:src="@drawable/ic_edited" />

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/answer_date_edit_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Edited"
                        android:textColor="#0083cb"
                        android:textSize="11sp"
                        android:visibility="visible" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/report_answer"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right|end"
                    android:padding="7sp"
                    android:src="@drawable/ic_qa_flag" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>