<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="vertical"
    tools:context="com.codingpixel.healingbudz.activity.home.home_fragment.budz_map_tab.BudzMapDetailsImagesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_content"
            android:layout_width="match_parent"
            android:layout_height="264sp">

            <RelativeLayout
                android:id="@+id/sqe_one"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="#1f1f1f">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="42sp"
                    android:layout_height="match_parent"
                    android:padding="2sp"
                    android:src="@drawable/ic_back_icon" />

                <ImageView
                    android:id="@+id/home_btn"
                    android:layout_width="42sp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/back_btn"
                    android:padding="7sp"
                    android:src="@drawable/ic_home_icon" />

                <ImageView
                    android:id="@+id/upload_image_button"
                    android:layout_width="52sp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6sp"
                    android:padding="13sp"
                    android:src="@drawable/ic_upload_budz_map_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/home_btn"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:id="@+id/q_a_menu_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingBottom="4sp"
                        android:paddingLeft="5sp"
                        android:text="Cannabusiness Gallery"
                        android:textColor="@color/white"
                        android:textSize="22sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/sqe_one"
                android:background="#252525">

                <com.codingpixel.healingbudz.customeUI.CircularImageView
                    android:id="@+id/profile_image"
                    android:layout_width="82sp"
                    android:layout_height="82sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12sp"
                    android:src="@drawable/ic_budz_adn" />

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/profile_image"
                    android:layout_marginBottom="14sp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:paddingLeft="8sp"
                        android:paddingRight="8sp"
                        android:weightSum="10">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                            android:id="@+id/main_heading_title"
                            android:layout_width="0sp"
                            android:layout_height="34sp"
                            android:layout_weight="8"
                            android:gravity="center"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Cutler Farms &amp; Dispensary"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/review_layout"
                        android:layout_width="match_parent"
                        android:layout_height="36sp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/rating_img"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:padding="3sp"
                            android:src="@drawable/ic_rating_img" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                            android:id="@+id/review_text"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.4"
                            android:gravity="center_vertical|right"
                            android:paddingRight="2sp"
                            android:text="5 Reviews"
                            android:textColor="#e4e4e5"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:gravity="center"
                        android:paddingLeft="8sp"
                        android:paddingRight="8sp"
                        android:weightSum="10">

                        <LinearLayout
                            android:id="@+id/deliver_layout"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:gravity="center"
                            android:weightSum="10">

                            <LinearLayout
                                android:id="@+id/organic_layout"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8sp"
                                    android:text="Organic"
                                    android:textColor="#e4e4e5"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/organic_img"
                                    android:layout_width="40sp"
                                    android:layout_height="match_parent"
                                    android:padding="7sp"
                                    android:src="@drawable/ic_organic" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/delivery_layout"
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="4.5"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="We Deliver"
                                    android:textColor="#e4e4e5"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="40sp"
                                    android:layout_height="match_parent"
                                    android:padding="7sp"
                                    android:src="@drawable/ic_delivery" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/image_showing_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90sp"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="10">

                <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/image_showing_view_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="110sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_budz_map_header_bg"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#252525"
            android:paddingTop="10sp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/images_gallery_recyler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
