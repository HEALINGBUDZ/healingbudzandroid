<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_wall_post_photo_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/feed_toolbar_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <LinearLayout
                android:id="@+id/activity_wall_post_photo_detail_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:padding="5sp"
                    android:src="@drawable/ic_wall_sceen_cross" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"

                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:text="Cancel"
                    android:textColor="#929191"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/download_image"
                android:layout_width="40sp"
                android:layout_height="match_parent"
                android:layout_gravity="end|right"
                android:layout_marginEnd="?android:attr/actionBarSize"
                android:paddingLeft="6sp"
                android:paddingRight="6sp"
                android:src="@drawable/ic_download"
                android:tint="@color/white"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/activity_wall_post_photo_detail_more_btn"
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="match_parent"
                android:layout_gravity="end|right"
                android:padding="10dp"
                android:src="@drawable/ic_menu_dot_gray" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--<com.codingpixel.healingbudz.customeUI.ZoomProblemViewPager-->
            <!--android:id="@+id/activity_wall_post_photo_detail_imgs_pager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginEnd="5dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:paddingBottom="5dp">-->

            <!--</com.codingpixel.healingbudz.customeUI.ZoomProblemViewPager>-->

            <LinearLayout
                android:id="@+id/activity_wall_post_photo_detail_pager_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--@drawable/wall_post_photo_detail_overlay_btn_bg-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#161616"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingEnd="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="8dp">

                    <RelativeLayout
                        android:layout_width="50sp"
                        android:layout_height="50dp">

                        <com.codingpixel.healingbudz.customeUI.CircularImageView
                            android:id="@+id/activity_wall_post_photo_detail_person_img"
                            android:layout_width="50dp"
                            android:layout_height="50sp"
                            android:layout_marginLeft="7sp"
                            android:layout_marginTop="6sp"
                            android:src="@drawable/smile" />

                        <ImageView
                            android:id="@+id/profile_img_topi"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="3sp"
                            android:layout_marginTop="3sp"
                            android:src="@drawable/topi_ic"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                            android:id="@+id/activity_wall_post_photo_detail_person_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="Bester Bud"
                            android:textColor="#f09a07"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/activity_wall_post_photo_detail_person_leaf"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_profile_leaf_yellow" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                                android:id="@+id/activity_wall_post_photo_detail_person_extra_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:lines="1"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:text="355  |  Blooing Buds"
                                android:textColor="#f09a07"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.codingpixel.healingbudz.customeUI.ZoomProblemViewPager
                        android:id="@+id/activity_wall_post_photo_detail_imgs_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.codingpixel.healingbudz.customeUI.ZoomProblemViewPager>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/wall_post_photo_detail_photo_overlay"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/activity_wall_post_photo_detail_prev_btn"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_back_icon" />
<!--@drawable/wall_post_photo_detail_overlay_btn_bg-->

                    <ImageView
                        android:id="@+id/activity_wall_post_photo_detail_next_btn"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|end"
                        android:background="@color/transparent"
                        android:rotation="180"
                        android:src="@drawable/ic_back_icon" />

                </FrameLayout>
                <!--@drawable/wall_post_photo_detail_overlay_btn_bg-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#161616"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:id="@+id/activity_wall_post_photo_detail_like_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/activity_wall_post_photo_detail_like_icon"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/like_heart" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                                android:id="@+id/activity_wall_post_photo_detail_like_txt_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:text="Liked"
                                android:textColor="#b2b1b1"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activity_wall_post_photo_detail_comment_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/comment_icon" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                                android:id="@+id/activity_wall_post_photo_detail_comment_txt_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:text="Comments"
                                android:textColor="#b2b1b1"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5sp"
                        android:background="#d8b2b1b1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <LinearLayout
                            android:id="@+id/liked_dialogue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <ImageView

                                android:layout_width="12dp"
                                android:layout_height="22dp"
                                android:src="@drawable/like_heart"
                                android:visibility="invisible" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                                android:id="@+id/activity_wall_post_photo_detail_like_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginStart="0dp"
                                android:text="13 Likes"
                                android:textColor="#b2b1b1"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="22dp"
                                android:src="@drawable/comment_icon"
                                android:visibility="invisible" />

                            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                                android:id="@+id/activity_wall_post_photo_detail_comment_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_marginStart="0dp"
                                android:text="123 Comments"
                                android:textColor="#b2b1b1"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.rd.PageIndicatorView
                        android:id="@+id/activity_wall_post_photo_detail_imgs_pager_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        app:piv_animationType="scale"
                        app:piv_dynamicCount="true"
                        app:piv_interactiveAnimation="true"
                        app:piv_padding="4dp"
                        app:piv_radius="3dp"
                        app:piv_scaleFactor="0.9"
                        app:piv_selectedColor="#929091"
                        app:piv_unselectedColor="#54534f" />
                </LinearLayout>


            </LinearLayout>

        </FrameLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.34"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/activity_wall_post_photo_detail_post_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="15dp"
                    android:paddingEnd="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:textColor="#c4c4c4"
                    android:textSize="15sp" />

            </ScrollView>

        </LinearLayout>-->

    </LinearLayout>
</RelativeLayout>