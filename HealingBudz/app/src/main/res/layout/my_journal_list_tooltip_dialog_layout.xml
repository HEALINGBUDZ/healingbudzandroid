<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/public_private_dialog"
        android:layout_width="160sp"
        android:layout_height="109sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/filtr"
        android:layout_marginRight="20sp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5sp"
            android:background="@drawable/ic_up_arrow_indicator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12sp"
            android:background="@drawable/menu_dialog_bg"
            android:gravity="center"
            android:padding="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:weightSum="10"
                android:id="@+id/edit_journla"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="6sp"
                    android:id="@+id/public_icon"
                    android:src="@drawable/ic_edit_myquestion" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="Edit Journal"
                    android:layout_weight="8"
                    android:id="@+id/public_text"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#232323" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:weightSum="10"
                android:layout_marginTop="5sp"
                android:id="@+id/delete_journal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/private_icon"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="7sp"
                    android:src="@drawable/ic_delete_icon" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="Delete Journal"
                    android:id="@+id/private_text"
                    android:layout_weight="8"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#232323" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>