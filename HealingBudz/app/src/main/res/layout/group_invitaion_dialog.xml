<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dialog_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:orientation="vertical"
                android:paddingBottom="18sp"
                android:id="@+id/main_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="15sp"
                    android:paddingRight="16sp"
                    android:paddingBottom="15sp"
                    android:id="@+id/first_dialog_layout"
                    android:background="@drawable/shoot_out_dialog_bg"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">
                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group Invitaion"
                        android:layout_marginTop="10sp"
                        android:textSize="19sp"
                        android:textColor="#F69320"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="15sp"
                    android:layout_below="@+id/first_dialog_layout"
                    android:paddingRight="12sp"
                    android:paddingBottom="6sp"
                    android:paddingTop="0sp"
                    android:background="@drawable/shoot_out_dialog_bg_white"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">
                    <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/text_notification"
                        android:layout_marginTop="16sp"
                        android:layout_marginBottom="16sp"
                        android:textColor="#747474"
                        android:text="“Special deals for Weed Week.\n Free samples. Come see us.”"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:weightSum="10"
                        android:gravity="center"
                        android:paddingTop="8sp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:id="@+id/like_layout"
                            android:paddingBottom="8sp"
                            android:orientation="vertical">
                            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:layout_marginTop="7sp"
                                android:text="Reject"
                                android:textSize="14sp"
                                android:id="@+id/reject_button"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:background="@drawable/group_invitation_reject"
                                />

                        </LinearLayout>
                        <View
                            android:layout_width="0sp"
                            android:layout_height="4sp"
                            android:layout_weight="2"/>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:id="@+id/share_layout"
                            android:paddingBottom="8sp"
                            android:orientation="vertical">
                            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                                android:layout_width="match_parent"
                                android:layout_height="40sp"
                                android:layout_marginTop="7sp"
                                android:text="Accept"
                                android:id="@+id/accept_button"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:background="@drawable/group_invitation_accept"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>