<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1.4">
            <com.codingpixel.healingbudz.customeUI.CircularImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:padding="6sp"
                android:id="@+id/profile_img"
                android:src="@drawable/ic_profile_blue"/>
        </LinearLayout>
        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="6.8"
            android:id="@+id/bud_name"
            android:gravity="center_vertical"
            android:text="Shan Doe"
            android:paddingLeft="10sp"
            android:textSize="14sp"
            android:textColor="#8e8e8e"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1.4">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:padding="10sp"
                android:id="@+id/remove_bud"
                android:src="@drawable/ic_block_group_icon"/>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#32706f6f"
        android:layout_marginTop="6sp"/>

</LinearLayout>