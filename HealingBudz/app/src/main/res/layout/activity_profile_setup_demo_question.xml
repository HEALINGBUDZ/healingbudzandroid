<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:background="@drawable/home_bg_img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/top_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ael_duration="400"
            android:gravity="center"
            app:ael_expanded="true"
            app:ael_interpolator="fastOutLinearIn"
            app:ael_orientation="vertical">

            <com.codingpixel.healingbudz.customeUI.CircularImageView
                android:id="@+id/profile_image"
                android:layout_width="53sp"
                android:layout_height="53sp"
                android:layout_below="@+id/menu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="62sp"
                android:src="@drawable/ic_discuss_question_profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="14sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginTop="10sp"
                    android:id="@+id/heading_location"
                    android:text="David from Mianm"

                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14sp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:padding="4sp"
                        android:text="Q:"
                        android:textColor="#0182cd"
                        android:textSize="33sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Should I warm cannabis oil before applying?"
                    android:textSize="34sp"
                    android:textColor="@color/white" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_marginTop="24sp"
                    android:text="Add more details to your Question:"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#a4a4a3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24sp"
                    android:background="@drawable/answer_fragment_edittext_bg"
                    android:padding="14sp">

                    <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:gravity="top|left"
                        android:minLines="4"
                        android:focusable="false"
                        android:editable="false"
                        android:textSize="18sp"
                        android:id="@+id/description_details"
                        android:hint="Description..."
                        android:text="I’m using cannabis oil. For muscle pain therapy and I’m unsure if I should warm it before rubbing it on the effected areas."
                        android:maxLength="2500"
                        android:textColor="#383838" />
                </LinearLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/character_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:paddingTop="3sp"
                    android:text="500/2500 characters"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#a4a4a3" />

                <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                    android:layout_width="match_parent"
                    android:layout_height="51sp"
                    android:layout_marginLeft="64sp"
                    android:textSize="17sp"
                    android:layout_marginRight="64sp"
                    android:layout_marginTop="28sp"
                    android:background="@drawable/q_a_menu_ask_q_button"
                    android:text="ASK YOUR BUDZ"
                    android:textStyle="bold"
                    android:id="@+id/ask_yout_budz"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white" />

            </LinearLayout>

        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
    </LinearLayout>
</RelativeLayout>