<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="200sp"
        android:layout_height="60sp">

        <LinearLayout
            android:id="@+id/main_content_info_window"
            android:layout_width="match_parent"
            android:layout_height="62sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <com.codingpixel.healingbudz.customeUI.CircularImageView
                    android:id="@+id/info_windowicon_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="0sp"
                    android:src="@drawable/ic_budz_adn" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="7"
                android:orientation="vertical"
                android:paddingLeft="6sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/heading_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1sp"
                    android:layout_marginTop="4sp"
                    android:singleLine="true"
                    android:text="South Miami Natural Pharmaceuticals"
                    android:textColor="#932a88"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dispensary"
                    android:textColor="#808080"
                    android:textSize="7sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18sp"
                    android:orientation="horizontal"
                    android:paddingRight="12sp"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/rating_img"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:padding="3sp"
                        android:src="@drawable/ic_rating_img" />


                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:id="@+id/reviews"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5"
                        android:gravity="center_vertical|right"
                        android:text="5 Reviews"
                        android:textColor="#808080"
                        android:textSize="6sp" />

                </LinearLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:id="@+id/open_untill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:singleLine="true"
                    android:text="Open until 8:00 pm"
                    android:textColor="#932a88"
                    android:textSize="6sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_info_window_next_icon" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>