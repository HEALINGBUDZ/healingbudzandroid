<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84sp"
    android:background="#000000"
    android:id="@+id/main_layout"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/top_line"
        android:visibility="gone"
        android:src="@drawable/doted_line"
        android:layerType="software" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_line"
        android:layout_below="@+id/top_line"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/icon_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6sp"
                android:layout_weight="2"
                android:padding="4sp"
                android:src="@drawable/ic_profile_blue" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7sp"
                android:layout_marginTop="8sp"
                android:id="@+id/bud_map_catagory_img"
                android:src="@drawable/ic_dispancry_icon" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:orientation="vertical"
            android:paddingLeft="6sp"
            android:paddingTop="14sp">

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispensary"
                android:textColor="#5e5e5e"
                android:textSize="12sp" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:id="@+id/heading_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1sp"
                android:layout_marginTop="4sp"
                android:text="South Miami Natural Pharmaceuticals"
                android:textColor="#8e2884"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingRight="12sp"
                android:weightSum="12">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="3.2 mi"
                    android:textColor="#808080"
                    android:textSize="10sp" />


                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:padding="3sp"
                    android:id="@+id/rating_img"
                    android:src="@drawable/ic_rating_img" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical|right"
                    android:paddingRight="2sp"
                    android:text="5 Reviews"
                    android:textColor="#808080"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="end"
                    android:paddingLeft="6sp"
                    android:paddingRight="6sp"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:padding="5sp"
                        android:id="@+id/organic_img"
                        android:src="@drawable/ic_organic" />

                    <ImageView
                        android:layout_width="0sp"
                        android:padding="5sp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:id="@+id/delivery_img"
                        android:src="@drawable/ic_delivery"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4sp"
        android:background="#383838"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:visibility="gone"
        android:id="@+id/featured_business_layout"
        android:layout_alignParentRight="true"
        android:background="@drawable/bud_map_feature_business_bg"
        android:gravity="center_vertical"
        android:paddingLeft="3sp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:padding="3sp"
            android:src="@drawable/ic_featured_bussiness_star_icon" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEATURED  "
            android:textColor="#28383e"
            android:textSize="8sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:id="@+id/bottom_line"
        android:visibility="gone"
        android:background="#000" />
</RelativeLayout>