<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_act"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/home_bg_img"
    tools:context="com.codingpixel.healingbudz.activity.Registration.LoginEntrance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16sp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="150sp"
            android:layout_height="130sp"
            android:src="@drawable/ic_logo" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12sp"
            android:text="The Community for Natural Healing"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/facebook_login"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="34sp"
            android:background="@drawable/facebook_login_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:padding="13sp"
                android:src="@drawable/ic_fb_icon" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6.8"
                android:gravity="center"
                android:text="Sign In with Facebook"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:padding="13sp"
                android:src="@drawable/ic_fb_icon"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/google_login"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/google_plus_login_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:padding="13sp"
                android:src="@drawable/ic_g_plus_icon" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6.8"
                android:gravity="center"
                android:text="Sign In with Google"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:padding="13sp"
                android:src="@drawable/ic_fb_icon"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="11">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="4.9"
                android:gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="3sp"
                    android:background="#bababa" />
            </LinearLayout>

            <com.codingpixel.healingbudz.customeUI.HealingBudButton
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="Or"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ceccce"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="4.9"
                android:gravity="center">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="3sp"
                    android:background="#bababa" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sign_in_with_email"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="24sp"
            android:background="@drawable/login_main_drawable"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:padding="13sp"
                android:src="@drawable/ic_fb_icon"
                android:visibility="invisible" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6.8"
                android:gravity="center"
                android:text="Sign In with Email"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:padding="13sp"
                android:src="@drawable/ic_fb_icon"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sign_up_with_email"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/singup_main_drawable"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:padding="13sp"
                android:src="@drawable/ic_g_plus_icon"
                android:visibility="invisible" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6.8"
                android:gravity="center"
                android:text="Sign Up with Email"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:padding="13sp"
                android:src="@drawable/ic_fb_icon"
                android:visibility="invisible" />

        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:text="Forgot Password"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="10">

            <com.codingpixel.healingbudz.customeUI.HealingBudButton

                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4.9"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="Sign In with Email"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ceccce"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center">

                <View
                    android:layout_width="1sp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="3sp"
                    android:background="#bababa" />
            </LinearLayout>

            <com.codingpixel.healingbudz.customeUI.HealingBudButton

                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4.9"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="Sign Up with Email"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ceccce"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
