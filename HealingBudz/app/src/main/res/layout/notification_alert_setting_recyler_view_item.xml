<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2a2a2a"
    android:orientation="vertical"
    android:paddingLeft="10sp"
    android:paddingRight="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_one">
        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General"
            android:id="@+id/item_one_heading"
            android:textSize="18sp"
            android:layout_marginTop="8sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#7cc144"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54sp"
            android:orientation="vertical"
            android:weightSum="10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Enable First Launch Overview Screen"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:id="@+id/item_one_title"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="26sp"
                        android:layout_marginBottom="1sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="4sp"
                        android:background="#616161"
                        android:clickable="true"
                        android:id="@+id/switch_layout"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.codingpixel.healingbudz.customeUI.HealingBudButtonRegular
                            android:id="@+id/private_btn"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="-5sp"
                            android:layout_weight="5"
                            android:background="@drawable/seeting_toggle_btn_off"
                            android:text="OFF"
                            android:clickable="false"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/public_btn"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-5sp"
                            android:layout_weight="5"
                            android:clickable="false"
                            android:background="@color/transparent"
                            android:textAllCaps="true"
                            android:textColor="#f8f8f8"
                            android:textSize="12sp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#323232" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_two">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54sp"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:id="@+id/second_setting_item"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Groups:"
                        android:id="@+id/item_two_heading"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#323232" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28sp"
        android:orientation="vertical"
        android:id="@+id/item_three">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54sp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Enable First Launch Overview Screen"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:id="@+id/item_three_title"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="26sp"
                    android:layout_marginBottom="1sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="4sp"
                    android:background="#616161"
                    android:id="@+id/second_switch_layout"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.codingpixel.healingbudz.customeUI.HealingBudButtonRegular
                        android:layout_width="0sp"
                        android:id="@+id/item_three_off_btn"
                        android:layout_height="match_parent"
                        android:layout_marginRight="-5sp"
                        android:layout_weight="5"
                        android:background="@drawable/seeting_toggle_btn_off"
                        android:text="OFF"
                        android:clickable="false"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <Button
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-5sp"
                        android:layout_weight="5"
                        android:clickable="false"
                        android:id="@+id/item_three_on_btn"
                        android:background="@color/transparent"
                        android:textAllCaps="true"
                        android:textColor="#f8f8f8"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#323232" />

    </LinearLayout>



</LinearLayout>