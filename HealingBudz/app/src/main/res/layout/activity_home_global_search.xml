<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codingpixel.healingbudz.activity.home.home_fragment.HomeGlobalSearchActivity"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="16sp"
            android:background="#5c9233" />

        <RelativeLayout
            android:id="@+id/home_search_header"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#5c9233">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/home_btn"
                android:background="@color/transparent" />

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="42sp"
                android:layout_height="match_parent"
                android:padding="2sp"
                android:src="@drawable/ic_back_icon" />

            <ImageView
                android:id="@+id/home_btn"
                android:layout_width="42sp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/back_btn"
                android:padding="7sp"
                android:src="@drawable/ic_home_icon" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="59sp"
            android:background="#7bc344">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                        android:id="@+id/home_search_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:hint="Enter Keyword for search"
                        android:imeOptions="actionDone"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingLeft="14sp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="#a8ffffff"
                        android:textCursorDrawable="@drawable/edit_text_cursor_drawable_white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/cross_icon"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="5sp"
                        android:src="@drawable/ic_cross_icon"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/gloobal_search_btn_click"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="15sp"
                    android:src="@drawable/ic_search_white_home" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29sp"
            android:background="#609139"
            android:gravity="center">

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search: Q&amp;A, Strains, Budz Adz, and Users"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_search_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#252525"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/home_search_filter_button_click"
                android:layout_width="132sp"
                android:layout_height="23sp"
                android:background="@drawable/ic_home_filter_home_search_bg"
                android:gravity="center">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filter By Type"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:paddingTop="4sp"
                    android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/home_search_filter_layout"
                android:layout_width="match_parent"
                android:layout_height="220sp"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:layout_alignParentBottom="true"
                    android:background="#4b4b4b" />

                <ImageView
                    android:id="@+id/close_filter"
                    android:layout_width="80sp"
                    android:layout_height="40sp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="5sp"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/close_filter"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12sp"
                        android:text="Filter By Type"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:padding="2sp"
                            android:src="@drawable/ic_tab_qa" />

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3" />

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="Q&amp;A"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.codingpixel.healingbudz.customeUI.APPSwitch
                            android:id="@+id/global_search_check_box_qa"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:checked="true" />
                    </LinearLayout>
                    <!--GROUP-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="6sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:padding="2sp"
                            android:src="@drawable/ic_tab_group" />

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3" />

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="GROUPS"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.codingpixel.healingbudz.customeUI.APPSwitch
                            android:id="@+id/global_search_check_box_groups"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:checked="true" />
                    </LinearLayout>
                    <!--JOURNAL-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="6sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:padding="2sp"
                            android:src="@drawable/ic_tab_journal" />

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3" />

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="JOURNAL"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.codingpixel.healingbudz.customeUI.APPSwitch
                            android:id="@+id/global_search_check_box_journals"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:checked="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="6sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:padding="2sp"
                            android:src="@drawable/ic_tab_budz_map" />

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3" />

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="BUDZ ADZ"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.codingpixel.healingbudz.customeUI.APPSwitch
                            android:id="@+id/global_search_check_box_budzmap"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:checked="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="6sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:padding="2sp"
                            android:src="@drawable/ic_tab_strain" />

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3" />

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="STRAINS"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.codingpixel.healingbudz.customeUI.APPSwitch
                            android:id="@+id/global_search_check_box_strains"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:checked="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginTop="6sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:padding="2sp"
                            android:src="@drawable/ic_user_person" />

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3" />

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="USERS"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <com.codingpixel.healingbudz.customeUI.APPSwitch
                            android:id="@+id/global_search_check_box_user"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:checked="true" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/global_search_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_menu"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="14sp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/loading_spinner"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:indeterminateTint="#ffffff"
                    android:indeterminateTintMode="src_atop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:text="Loading..."
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!--<android.support.v4.widget.SwipeRefreshLayout-->
            <!--android:id="@+id/refresher"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_search_recyler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <!--</android.support.v4.widget.SwipeRefreshLayout>-->
        </LinearLayout>
    </LinearLayout>

    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
        android:id="@+id/not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="224dp"
        android:text="No Record Found!"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />
</android.support.constraint.ConstraintLayout>
