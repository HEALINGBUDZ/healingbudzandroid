<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#252222"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <com.codingpixel.healingbudz.customeUI.CircularImageView
                        android:id="@+id/user_image"
                        android:layout_width="50sp"
                        android:scaleType="centerCrop"
                        android:layout_height="50sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="1sp"
                        android:src="@drawable/ic_user_profile" />

                    <ImageView
                        android:id="@+id/user_image_hash"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="10sp"
                        android:src="@drawable/ic_hashtag"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/profile_img_topi"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/topi_ic"
                        android:visibility="visible" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:paddingLeft="5sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Bester Bud"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>