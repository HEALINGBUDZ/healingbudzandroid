<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/wall_post_detail_comment_bg"
    android:orientation="horizontal"
    android:padding="14dp">

    <RelativeLayout
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.codingpixel.healingbudz.customeUI.CircularImageView
            android:id="@+id/vh_wall_post_detail_comment_person_img"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="3sp"
            android:layout_marginTop="3sp"
            android:src="@drawable/smile" />

        <ImageView
            android:id="@+id/profile_img_topi"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="3sp"
            android:layout_marginTop="1sp"
            android:src="@drawable/topi_ic"
            android:visibility="visible" />

        <!--<LinearLayout-->
        <!--android:id="@+id/like_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/vh_wall_post_detail_comment_person_img"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:gravity="center"-->
        <!--android:orientation="vertical">-->

        <!--<ImageView-->
        <!--android:id="@+id/like_comment"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="50sp"-->
        <!--android:contentDescription="Like"-->
        <!--android:padding="10dp"-->
        <!--android:src="@drawable/un_like_wall" />-->

        <!--<com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular-->
        <!--android:id="@+id/count_like"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:paddingLeft="10sp"-->
        <!--android:paddingRight="10sp"-->
        <!--android:paddingBottom="10sp"-->
        <!--android:text="10"-->
        <!--android:textColor="@color/feeds_like_gray_color"-->
        <!--android:textSize="12sp" />-->
        <!--</LinearLayout>-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                android:id="@+id/vh_wall_post_detail_comment_person_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bester Bud"
                android:textColor="#f09a07"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewItalic
                android:id="@+id/vh_wall_post_detail_comment_time_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="45 min ago"
                android:textColor="#9ca1a7"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/vh_budz_feed_comment_post_options"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10sp"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_dot_gray"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.luseen.autolinklibrary.AutoLinkTextView
                android:id="@+id/vh_wall_post_detail_comment_txt"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1.7"
                android:textColor="#c4c4c4"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/like_layout"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like_comment"
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:contentDescription="Like"
                    android:src="@drawable/un_like_wall" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/count_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/feeds_like_gray_color"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/vh_wall_post_detail_comment_attachement_parent"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:visibility="gone">

            <!--<com.codingpixel.healingbudz.customeUI.SelectableRoundedImageView-->
            <ImageView
                android:id="@+id/vh_wall_post_detail_comment_attachement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/place_holder_wall" />
            <!--
                            app:sriv_left_bottom_corner_radius="5dp"
                            app:sriv_left_top_corner_radius="5dp"
                            app:sriv_right_bottom_corner_radius="5dp"
                            app:sriv_right_top_corner_radius="5dp" -->
            <ImageView
                android:id="@+id/vh_wall_post_detail_comment_video_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_video_play_icon"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>