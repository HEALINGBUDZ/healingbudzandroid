<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:weightSum="10">
        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="Journal Name"
            android:paddingLeft="6sp"
            android:id="@+id/title_journal"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:textColor="#e4e4e5"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:layout_weight="4">
            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:layout_width="30sp"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/entryies"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#e4e4e5"/>

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:padding="5sp"
                android:id="@+id/p_p"
                android:layout_marginLeft="5sp"
                android:src="@drawable/ic_public_icon_journal"/>

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:id="@+id/menu_dots"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:padding="7sp"
                android:src="@drawable/ic_menu_dots_journal_details"/>
            <View
                android:layout_width="1sp"
                android:layout_height="1sp"
                android:id="@+id/dummy_view"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/filtr"
        android:layout_marginTop="6sp"
        android:background="#4d4948" />

</LinearLayout>