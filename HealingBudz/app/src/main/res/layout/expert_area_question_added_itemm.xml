<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/sugested"
            android:layout_width="0sp"
            android:layout_height="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"
            android:layout_toLeftOf="@+id/ans_question_one"
            android:layout_weight="0.4"
            android:padding="4dp"
            android:src="@drawable/ic_indication_questions"
            android:visibility="invisible" />

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
            android:id="@+id/ans_question_one"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="2.2"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="Anxity"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cross"

            android:layout_width="0sp"
            android:layout_height="24sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="4sp"
            android:layout_toRightOf="@+id/ans_question_one"
            android:layout_weight="0.4"
            android:padding="5sp"
            android:src="@drawable/ic_cross_white_search" />

    </LinearLayout>
</RelativeLayout>