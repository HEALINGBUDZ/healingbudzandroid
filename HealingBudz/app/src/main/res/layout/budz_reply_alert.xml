<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/comment_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:background="@drawable/budz_map_review_bg"
        android:orientation="vertical"
        android:padding="10sp">

        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp"
            android:gravity="center_vertical"
            android:text="Add Reply"
            android:textColor="#923a88"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/answer_fragment_edittext_bg"
            android:padding="14sp">

            <com.codingpixel.healingbudz.customeUI.HealinBudEditText
                android:id="@+id/commment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="top|left"
                android:hint="Type your comment here..."
                android:inputType="textImeMultiLine|textAutoComplete|textAutoCorrect|textMultiLine|textCapSentences"
                android:maxLength="500"
                android:maxLines="5"
                android:textColor="#383838"
                android:textSize="16sp" />
        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
            android:id="@+id/question_detail_character_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="3sp"
            android:text="Max.500 Characters"
            android:textColor="#e4e4e5"

            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37sp"
            android:layout_marginTop="18sp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="10">

            <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                android:id="@+id/upload_comment_image"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:background="@drawable/shoot_out_bg"
                android:text="Upload"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6.6"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="AN IMAGE OR VIDEO"
                    android:textColor="#e4e4e5"
                    android:textSize="14sp" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0sp"
                    android:gravity="center_vertical"
                    android:text="(20 sec max.)"
                    android:textColor="#e4e4e5"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="14sp"
            android:background="#363636"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/comment_image_layout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="10">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="12sp"
                android:src="@drawable/ic_attatch_ment" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/attachement_img"
                    android:layout_width="33sp"
                    android:layout_height="33sp"
                    android:background="@drawable/test_img" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:id="@+id/attachment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="image.png"
                    android:visibility="gone"
                    android:textColor="#e4e4e5"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/attatchment_cross"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="15sp"
                android:src="@drawable/ic_cross_icon" />


        </LinearLayout>


        <View

            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:background="#363636" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:weightSum="10">

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="3.4"
                android:gravity="center_vertical"
                android:text="Add Your Rating:"
                android:textColor="#932a88"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="6.47"
                android:gravity="center">

                <!--<RatingBar-->
                <!--android:id="@+id/go_rating"-->
                <!--style="@style/rating_barStyle"-->
                <!--android:layout_width="208sp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:isIndicator="false"-->
                <!--android:max="5"-->
                <!--android:numStars="5"-->
                <!--android:paddingLeft="11sp"-->
                <!--android:paddingRight="11sp"-->
                <!--android:rating="0"-->
                <!--android:theme="@style/RatingBar" />-->
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/go_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srb_borderColor="#e070e0"
                    app:srb_fillColor="#e070e0"
                    app:srb_numberOfStars="5"
                    app:srb_rating="0"
                    app:srb_starSize="30dp"
                    app:srb_stepSize="1" />
            </LinearLayout>


        </LinearLayout>

        <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
            android:id="@+id/submit_commnet"
            android:layout_width="match_parent"
            android:layout_height="37sp"
            android:layout_marginTop="16sp"
            android:background="@drawable/shoot_out_bg"
            android:text="SUBMIT REPLY"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cross_btn"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentRight="true"
        android:paddingBottom="10sp"
        android:paddingLeft="10sp"
        android:src="@drawable/ic_save_dialog_cross" />
</RelativeLayout>