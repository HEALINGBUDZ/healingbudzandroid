<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:background="@drawable/home_bg_img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/top_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ael_duration="400"
            android:gravity="center"
            app:ael_expanded="true"
            app:ael_interpolator="fastOutLinearIn"
            app:ael_orientation="vertical">

            <com.codingpixel.healingbudz.customeUI.CircularImageView
                android:id="@+id/profile_image"
                android:layout_width="53sp"
                android:layout_height="53sp"
                android:layout_below="@+id/menu"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_discuss_question_profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="14sp">

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10sp"
                    android:textSize="18sp"
                    android:id="@+id/heading_location"
                    android:text="David from Mianm"

                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14sp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:padding="4sp"
                        android:text="Q:"
                        android:textColor="#0182cd"
                        android:textSize="34sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Should I warm cannabis oil before applying?"
                    android:textSize="34sp"
                    android:textColor="@color/white" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/answer"
                    android:textSize="18sp"
                    android:layout_marginTop="24sp"
                    android:text="Add more details to your Question:"

                    android:textColor="#a4a4a3" />

 <View
     android:layout_width="match_parent"
     android:layout_height="1sp"
     android:background="#5b5442"
     android:layout_marginTop="20sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:padding="4sp"
                        android:text="A:"
                        android:textColor="#0182cd"
                        android:textSize="34sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Jan 3, 2017, 05:08 PM"
                    android:textSize="11sp"
                    android:textColor="#a4a4a3" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="257 Budz have been notified. You should receive an answer in a few minutes."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12sp"
                    android:textColor="#0084cb" />

                <com.codingpixel.healingbudz.customeUI.HealingBudButtonBold
                    android:layout_width="match_parent"
                    android:layout_height="51sp"
                    android:layout_marginTop="26sp"
                    android:layout_marginLeft="17sp"
                    android:layout_marginRight="17sp"
                    android:textSize="17sp"
                    android:background="@drawable/budz_map_dialog_green_btn_bg_main"
                    android:text="Countinue Your Profile Setup"
                    android:id="@+id/countinue_profile"
                    android:textStyle="bold"
                    android:textAllCaps="true"

                    android:textColor="@color/white" />

            </LinearLayout>

        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
    </LinearLayout>
</RelativeLayout>