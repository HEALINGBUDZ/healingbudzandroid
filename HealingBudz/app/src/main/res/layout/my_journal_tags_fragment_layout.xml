<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="14sp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:indeterminateTint="#ffffff"
            android:indeterminateTintMode="src_atop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:text="Loading..."
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/white" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:id="@+id/tags_recyler_view"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@+id/filtr"
        android:layout_marginTop="20sp"
        android:background="#4d4948" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:weightSum="10"
        android:paddingRight="10sp"
        android:visibility="gone"
        android:paddingLeft="10sp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="5">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:padding="3sp"
                android:src="@drawable/ic_tag_pin_green"/>
            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cannabis Oil"
                android:textSize="18sp"
                android:layout_marginLeft="10sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#7cc144"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_weight="5">
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:padding="6sp"
                android:src="@drawable/ic_pin_edit_myjournal"/>
            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="18sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#898989"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:visibility="gone"
        android:layout_below="@+id/filtr"
        android:layout_marginTop="6sp"
        android:background="#4d4948" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:visibility="gone"
        android:id="@+id/journal_list_recyler_view"/>

</LinearLayout>