<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8sp"
        android:layout_marginRight="10sp"
        android:paddingBottom="8sp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="8.5"
            android:orientation="vertical">

            <com.codingpixel.healingbudz.customeUI.HealingBudTextViewBold
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FirstDay of Treatment"
                android:textColor="#c5c5c5"
                android:textSize="9sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="2sp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8sp"
                    android:layout_height="8sp"
                    android:src="@drawable/ic_calaneder_gray" />

                <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:id="@+id/event_date"
                    android:text="WED 01 FEB, 05:30 PM"
                    android:textColor="#c5c5c5"
                    android:textSize="9sp" />

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:padding="2sp"
            android:id="@+id/emoji"
            android:src="@drawable/ic_emoji" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:id="@+id/bottom_line"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#694e4a4b"/>
</LinearLayout>