<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/first_review_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">


            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="25sp"
                        android:layout_height="34sp"
                        android:layout_gravity="top"
                        android:layout_marginTop="-2sp"
                        android:layout_weight="2"
                        android:padding="3sp"
                        android:src="@drawable/ic_green_star_reward" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/star"
                        android:orientation="vertical">

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                            android:id="@+id/text_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2sp"
                            android:layout_centerVertical="true"
                            android:paddingBottom="4sp"
                            android:paddingLeft="4sp"
                            android:text="Follow a Bud"
                            android:textColor="@color/white"
                            android:textSize="19sp" />

                        <com.codingpixel.healingbudz.customeUI.HealingBudTextViewItalic
                            android:layout_width="match_parent"
                            android:id="@+id/date"
                            android:layout_height="wrap_content"
                            android:paddingStart="6sp"
                            android:text="16-16-2018"
                            android:textColor="#5C5D5D"
                            android:textSize="10sp" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

            <com.codingpixel.healingbudz.customeUI.HealingBudTextView
                android:layout_width="0sp"
                android:id="@+id/points"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="end"
                android:maxLines="1"
                android:paddingEnd="5sp"
                android:singleLine="true"
                android:text="+50 pts"
                android:textColor="#82BB2B"
                android:textSize="19sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="5sp"
            android:background="#5C5D5D" />
    </LinearLayout>
</LinearLayout>